@model MaiAmTinhThuong.Models.MaiAm

<div class="card shadow-sm border-0">
    <div class="card-header bg-white">
        <h4 class="text-center text-primary fw-bold mb-0">📁 Quản lý hồ sơ: @ViewBag.MaiAmName</h4>
    </div>
    <div class="card-body p-3">
        <div class="mb-3 text-end">
            <a asp-action="CreateProfile" asp-route-maiAmId="@Model.Id" class="btn btn-success btn-sm">
                <i class="bi bi-plus-circle"></i> Thêm hồ sơ mới
            </a>
            <a asp-action="Manage" class="btn btn-secondary btn-sm">
                <i class="bi bi-arrow-left"></i> Quay lại danh sách Mái ấm
            </a>
        </div>

        <div class="table-responsive">
            <table class="table table-bordered table-striped table-hover align-middle text-center">
                <thead class="table-light">
                    <tr>
                        <th>Họ tên</th>
                        <th>Tuổi</th>
                        <th>Hoàn cảnh</th>
                        <th>Sức khỏe</th>
                        <th>Duyệt</th>
                        <th>Hỗ trợ HC</th>
                        <th>Hỗ trợ SK</th>
                        <th>Hỗ trợ chung</th>
                        <th>Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var request in Model.SupportRequests)
                    {
                        <tr>
                            <td class="text-start">@request.Name</td>
                            <td>@request.Age</td>
                            <td class="text-start">@request.Reason</td>
                            <td class="text-start">@request.HealthStatus</td>
                            <td>
                                <button class="btn btn-success btn-sm approve-btn"
                                        data-id="@request.Id"
                                @(request.IsApproved ? "disabled" : "")>
                                    @(request.IsApproved ? "Đã duyệt" : "Duyệt")
                                </button>
                            </td>
                            <td>
                                <input type="checkbox" data-id="@request.Id"
                                       class="form-check-input toggle-support-reason"
                                @(request.IsSupportedReason ? "checked" : "") />
                            </td>
                            <td>
                                <input type="checkbox" data-id="@request.Id"
                                       class="form-check-input toggle-support-health"
                                @(request.IsSupportedHealth ? "checked" : "") />
                            </td>
                            <td>
                                <input type="checkbox" data-id="@request.Id"
                                       class="form-check-input toggle-support-general"
                                @(request.IsSupported ? "checked" : "") />
                            </td>
                            <td>
                                <div class="btn-group btn-group-sm">
                                    <a asp-action="DetailsProfile" asp-route-id="@request.Id" class="btn btn-outline-info">Xem</a>
                                    <a asp-action="EditProfile" asp-route-id="@request.Id" class="btn btn-outline-warning">Sửa</a>
                                    <a asp-action="DeleteProfile" asp-route-id="@request.Id" class="btn btn-outline-danger">Xóa</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
