@{
    ViewData["Title"] = "Xác nhận mã";
    var email = ViewBag.Email as string ?? "";
}

<div class="container mt-5 mb-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="auth-card">
                <div class="auth-header">
                    <h2 class="text-center mb-0">
                        <span style="font-size: 2rem;">✉️</span>
                        <span class="ms-2">Xác nhận mã</span>
                    </h2>
                    <p class="text-center text-muted mt-2">Nhập mã xác nhận đã được gửi đến email của bạn</p>
                </div>

                @if (TempData["Message"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        @TempData["Message"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                @if (TempData["Error"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        @TempData["Error"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                @if (TempData["Warning"] != null)
                {
                    <div class="alert alert-warning alert-dismissible fade show" role="alert">
                        @TempData["Warning"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                <div class="alert alert-info">
                    <i class="fas fa-envelope me-2"></i>
                    <strong>Email:</strong> @email
                </div>

                <form asp-action="VerifyCode" method="post" class="auth-form">
                    <input type="hidden" name="email" value="@email" />
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <!-- Mã xác nhận -->
                    <div class="form-group">
                        <label for="code" class="form-label">
                            <i class="fas fa-key me-2"></i>Mã xác nhận (6 số)
                        </label>
                        <input type="text" 
                               id="code" 
                               name="code" 
                               class="form-control text-center" 
                               placeholder="000000" 
                               maxlength="6" 
                               pattern="[0-9]{6}" 
                               required 
                               autocomplete="off"
                               style="font-size: 1.5rem; letter-spacing: 0.5rem; font-weight: bold;" />
                        <small class="form-text text-muted">Nhập mã 6 số đã được gửi đến email của bạn</small>
                    </div>

                    <!-- Nút Xác nhận -->
                    <button type="submit" class="btn btn-primary w-100 mb-3">
                        <i class="fas fa-check me-2"></i>Xác nhận
                    </button>

                    <!-- Gửi lại mã -->
                    <div class="text-center">
                        <button type="button" class="btn btn-link text-decoration-none" onclick="resendVerificationCode('@email')">
                            <i class="fas fa-redo me-1"></i>Gửi lại mã xác nhận
                        </button>
                    </div>

                    <!-- Links -->
                    <div class="text-center mt-3">
                        <a asp-action="Login" class="auth-link">Quay lại đăng nhập</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        // Auto-focus vào ô nhập mã
        document.addEventListener('DOMContentLoaded', function() {
            const codeInput = document.getElementById('code');
            if (codeInput) {
                codeInput.focus();
            }
        });

        // Chỉ cho phép nhập số
        document.getElementById('code').addEventListener('input', function(e) {
            this.value = this.value.replace(/[^0-9]/g, '');
        });

        async function resendVerificationCode(email) {
            if (!email) {
                alert('❌ Email không hợp lệ.');
                return;
            }

            try {
                const response = await fetch('/Account/ResendVerificationCode', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ email: email })
                });
                
                const result = await response.json();
                
                if (result.success) {
                    alert('✅ ' + result.message);
                } else {
                    alert('❌ ' + result.message);
                }
            } catch (error) {
                alert('❌ Có lỗi xảy ra. Vui lòng thử lại sau.');
            }
        }
    </script>
}

<style>
    .auth-card {
        background: white;
        border-radius: 20px;
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
        padding: 2.5rem;
        margin-top: 2rem;
    }

    .auth-header {
        margin-bottom: 2rem;
    }

    .auth-header h2 {
        font-size: 2rem;
        font-weight: 700;
        color: #2c3e50;
    }

    .form-group {
        margin-bottom: 1.5rem;
    }

    .form-label {
        font-weight: 600;
        color: #333;
        margin-bottom: 0.5rem;
        display: block;
    }

    .form-control {
        border-radius: 12px;
        padding: 0.875rem 1.25rem;
        font-size: 1rem;
        border: 2px solid #e0e0e0;
        transition: all 0.3s ease;
    }

    .form-control:focus {
        border-color: #FF6B9D;
        box-shadow: 0 0 0 3px rgba(255, 107, 157, 0.1);
        outline: none;
    }

    .btn-primary {
        background: linear-gradient(135deg, #FF6B9D 0%, #C44569 100%);
        border: none;
        border-radius: 12px;
        padding: 0.875rem;
        font-weight: 600;
        font-size: 1rem;
        transition: all 0.3s ease;
    }

    .btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 20px rgba(255, 107, 157, 0.3);
    }

    .auth-link {
        color: #FF6B9D;
        text-decoration: none;
        font-weight: 600;
        transition: color 0.3s ease;
    }

    .auth-link:hover {
        color: #C44569;
        text-decoration: underline;
    }

    .alert {
        border-radius: 12px;
        border: none;
    }

    .btn-link {
        color: #FF6B9D;
    }

    .btn-link:hover {
        color: #C44569;
    }
</style>

