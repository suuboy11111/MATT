@model IEnumerable<MaiAmTinhThuong.Models.VinhDanh>

@{
    ViewData["Title"] = "Danh sách vinh danh";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Danh sách vinh danh</h2>
        <a class="btn btn-primary" asp-action="Create">
            <i class="bi bi-plus-lg"></i> Thêm mới
        </a>
    </div>

    <form method="get" class="mb-3">
        <div class="input-group">
            <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" class="form-control" placeholder="Tìm kiếm theo họ tên..." />
            <button class="btn btn-outline-secondary" type="submit">Tìm</button>
        </div>
    </form>

    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Họ tên</th>
                <th>Loại</th>
                <th>Số tiền ủng hộ</th>
                <th>Số giờ hoạt động</th>
                <th>Ngày vinh danh</th>
                <th>Ghi chú</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>@item.HoTen</td>
                        <td>@item.Loai</td>
                        <td>@(item.SoTienUngHo?.ToString("N0") ?? "-")</td>
                        <td>@(item.SoGioHoatDong?.ToString() ?? "-")</td>
                        <td>@item.NgayVinhDanh.ToString("dd/MM/yyyy")</td>
                        <td>@item.GhiChu</td>
                        <td>
                            <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@item.Id">Sửa</a>
                            <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Id">Xóa</a>
                            @* Hiển thị nút Tạo chứng nhận chỉ khi là Nhà Hảo Tâm *@
                            @if (item.Loai != null && item.Loai.ToLower().Contains("hảo tâm"))
                            {
                                <a class="btn btn-sm btn-success mt-1" asp-controller="VinhDanhs" asp-action="TaoChungNhan" asp-route-id="@item.Id">
                                    Tạo chứng nhận
                                </a>

                            }


                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="7" class="text-center">Không có dữ liệu</td>
                </tr>
            }
        </tbody>
    </table>
</div>
