@model IEnumerable<MaiAmTinhThuong.Models.VinhDanh>

@{
    ViewData["Title"] = "Danh sách vinh danh";
}

<div class="admin-container">
    <div class="container-fluid px-4">
        <!-- Page Header -->
        <div class="admin-page-header">
            <h2><i class="fas fa-trophy me-3"></i>Danh sách vinh danh</h2>
            <p>Quản lý danh sách vinh danh những người đóng góp cho Mái Ấm Tình Thương</p>
        </div>

        <!-- Action Bar - Chỉ hiển thị cho Admin -->
        @if (User.IsInRole("Admin"))
        {
            <div class="admin-action-bar mb-3">
                <a class="admin-btn admin-btn-primary" asp-action="Create">
                    <i class="fas fa-plus me-2"></i>Thêm mới
                </a>
            </div>
        }

        <!-- Search Form -->
        <div class="admin-search-form mb-3">
            <form method="get" class="row g-3">
                <div class="col-md-8">
                    <div class="input-group">
                        <span class="input-group-text bg-white border-end-0">
                            <i class="fas fa-search text-muted"></i>
                        </span>
                        <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" 
                               class="form-control admin-form-control border-start-0" 
                               placeholder="Tìm kiếm theo họ tên..." />
                    </div>
                </div>
                <div class="col-md-4">
                    <button class="admin-btn admin-btn-primary w-100" type="submit">
                        <i class="fas fa-search me-2"></i>Tìm kiếm
                    </button>
                </div>
            </form>
        </div>

        <!-- Table -->
        <div class="admin-table-wrapper">
            <table class="table admin-table">
                <thead>
                    <tr>
                        <th><i class="fas fa-user me-2"></i>Họ tên</th>
                        <th><i class="fas fa-tag me-2"></i>Loại</th>
                        <th><i class="fas fa-money-bill-wave me-2"></i>Số tiền ủng hộ</th>
                        <th><i class="fas fa-clock me-2"></i>Số giờ hoạt động</th>
                        <th><i class="fas fa-calendar me-2"></i>Ngày vinh danh</th>
                        <th><i class="fas fa-sticky-note me-2"></i>Ghi chú</th>
                        @if (User.IsInRole("Admin"))
                        {
                            <th class="text-center"><i class="fas fa-cog me-2"></i>Hành động</th>
                        }
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td><strong>@item.HoTen</strong></td>
                                <td>
                                    <span class="admin-badge admin-badge-info">
                                        @item.Loai
                                    </span>
                                </td>
                                <td>
                                    @if (item.SoTienUngHo.HasValue)
                                    {
                                        <span class="text-success fw-bold">
                                            @item.SoTienUngHo.Value.ToString("N0") VNĐ
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    @if (item.SoGioHoatDong.HasValue)
                                    {
                                        <span>@item.SoGioHoatDong.Value giờ</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>@item.NgayVinhDanh.ToString("dd/MM/yyyy")</td>
                                <td>
                                    @{
                                        var ghiChu = item.GhiChu ?? "";
                                        var ghiChuPreview = ghiChu.Length > 50 ? ghiChu.Substring(0, 50) + "..." : ghiChu;
                                    }
                                    <span title="@ghiChu">@ghiChuPreview</span>
                                </td>
                                @if (User.IsInRole("Admin"))
                                {
                                    <td>
                                        <div class="d-flex gap-2 justify-content-center">
                                            <a class="admin-btn admin-btn-warning admin-btn-sm" asp-action="Edit" asp-route-id="@item.Id" title="Sửa">
                                                <i class="fas fa-edit"></i> Sửa
                                            </a>
                                            <a class="admin-btn admin-btn-danger admin-btn-sm" asp-action="Delete" asp-route-id="@item.Id" title="Xóa">
                                                <i class="fas fa-trash-alt"></i> Xóa
                                            </a>
                                            @if (item.Loai != null && item.Loai.ToLower().Contains("hảo tâm"))
                                            {
                                                <a class="admin-btn admin-btn-success admin-btn-sm" 
                                                   asp-controller="VinhDanhs" asp-action="TaoChungNhan" asp-route-id="@item.Id" title="Tạo chứng nhận">
                                                    <i class="fas fa-certificate"></i> Chứng nhận
                                                </a>
                                            }
                                        </div>
                                    </td>
                                }
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="@(User.IsInRole("Admin") ? "7" : "6")" class="admin-empty-state">
                                <i class="fas fa-inbox"></i>
                                <h4>Không có dữ liệu</h4>
                                <p>Chưa có bản ghi vinh danh nào trong hệ thống.</p>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
