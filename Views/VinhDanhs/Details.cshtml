@model MaiAmTinhThuong.Models.VinhDanh

@{
    ViewData["Title"] = "Chi tiết vinh danh";
}

<div class="admin-container">
    <div class="container-fluid px-4">
        <!-- Page Header -->
        <div class="admin-page-header">
            <h2><i class="fas fa-trophy me-3"></i>Chi tiết vinh danh</h2>
            <p>Thông tin chi tiết về người được vinh danh</p>
        </div>

        <!-- Detail Card -->
        <div class="admin-card">
            <div class="admin-card-body">
                <div class="row">
                    <!-- Họ tên -->
                    <div class="col-md-6 mb-4">
                        <div class="detail-item">
                            <div class="detail-label">
                                <i class="fas fa-user text-primary me-2"></i>
                                <strong>Họ tên</strong>
                            </div>
                            <div class="detail-value">
                                @Model.HoTen
                            </div>
                        </div>
                    </div>

                    <!-- Loại -->
                    <div class="col-md-6 mb-4">
                        <div class="detail-item">
                            <div class="detail-label">
                                <i class="fas fa-tag text-info me-2"></i>
                                <strong>Loại</strong>
                            </div>
                            <div class="detail-value">
                                <span class="admin-badge admin-badge-info">
                                    @Model.Loai
                                </span>
                            </div>
                        </div>
                    </div>

                    <!-- Số tiền ủng hộ -->
                    @if (Model.SoTienUngHo.HasValue)
                    {
                        <div class="col-md-6 mb-4">
                            <div class="detail-item">
                                <div class="detail-label">
                                    <i class="fas fa-money-bill-wave text-success me-2"></i>
                                    <strong>Số tiền ủng hộ</strong>
                                </div>
                                <div class="detail-value text-success fw-bold" style="font-size: 1.25rem;">
                                    @Model.SoTienUngHo.Value.ToString("N0") VNĐ
                                </div>
                            </div>
                        </div>
                    }

                    <!-- Số giờ hoạt động -->
                    @if (Model.SoGioHoatDong.HasValue)
                    {
                        <div class="col-md-6 mb-4">
                            <div class="detail-item">
                                <div class="detail-label">
                                    <i class="fas fa-clock text-warning me-2"></i>
                                    <strong>Số giờ hoạt động</strong>
                                </div>
                                <div class="detail-value">
                                    <span class="badge bg-warning text-dark" style="font-size: 1rem; padding: 0.5rem 1rem;">
                                        @Model.SoGioHoatDong.Value giờ
                                    </span>
                                </div>
                            </div>
                        </div>
                    }

                    <!-- Ngày vinh danh -->
                    <div class="col-md-6 mb-4">
                        <div class="detail-item">
                            <div class="detail-label">
                                <i class="fas fa-calendar-alt text-danger me-2"></i>
                                <strong>Ngày vinh danh</strong>
                            </div>
                            <div class="detail-value">
                                @Model.NgayVinhDanh.ToString("dd/MM/yyyy")
                            </div>
                        </div>
                    </div>

                    <!-- Ghi chú -->
                    @if (!string.IsNullOrEmpty(Model.GhiChu))
                    {
                        <div class="col-12 mb-4">
                            <div class="detail-item">
                                <div class="detail-label">
                                    <i class="fas fa-sticky-note text-secondary me-2"></i>
                                    <strong>Ghi chú</strong>
                                </div>
                                <div class="detail-value">
                                    <div class="note-box">
                                        @Model.GhiChu
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Action Buttons -->
        <div class="text-center mt-4">
            @if (User.IsInRole("Admin"))
            {
                <a asp-action="Edit" asp-route-id="@Model?.Id" class="admin-btn admin-btn-warning me-2">
                    <i class="fas fa-edit"></i> Sửa
                </a>
                <a asp-action="Delete" asp-route-id="@Model?.Id" class="admin-btn admin-btn-danger me-2">
                    <i class="fas fa-trash-alt"></i> Xóa
                </a>
                @if (Model.Loai != null && Model.Loai.ToLower().Contains("hảo tâm"))
                {
                    <a asp-controller="VinhDanhs" asp-action="TaoChungNhan" asp-route-id="@Model.Id" class="admin-btn admin-btn-success me-2">
                        <i class="fas fa-certificate"></i> Tạo chứng nhận
                    </a>
                }
            }
            <a asp-action="Index" class="admin-btn admin-btn-secondary">
                <i class="fas fa-arrow-left"></i> Quay lại danh sách
            </a>
        </div>
    </div>
</div>

<style>
    .detail-item {
        padding: 1rem;
        background: #f8f9ff;
        border-radius: 12px;
        border-left: 4px solid #667eea;
        transition: all 0.3s ease;
    }

    .detail-item:hover {
        background: #f0f2ff;
        transform: translateX(5px);
        box-shadow: 0 4px 12px rgba(102, 126, 234, 0.15);
    }

    .detail-label {
        font-size: 0.9rem;
        color: #6c757d;
        margin-bottom: 0.5rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .detail-value {
        font-size: 1.1rem;
        color: #2d3748;
        font-weight: 500;
    }

    .note-box {
        background: white;
        padding: 1rem 1.25rem;
        border-radius: 8px;
        border: 1px solid #e0e0e0;
        white-space: pre-wrap;
        word-wrap: break-word;
        line-height: 1.6;
        color: #4a5568;
    }

    @@media (max-width: 768px) {
        .detail-item {
            margin-bottom: 1rem;
        }
        
        .detail-value {
            font-size: 1rem;
        }
    }
</style>
