@model IEnumerable<MaiAmTinhThuong.Models.MaiAm>

@{
    ViewData["Title"] = "Quản lý Mái ấm";
}

<div class="admin-container">
    <div class="container-fluid px-4">
        <!-- Page Header -->
        <div class="admin-page-header">
            <h2><i class="fas fa-home me-3"></i>Quản Lý Mái Ấm</h2>
            <p>Quản lý và theo dõi tất cả các mái ấm trong hệ thống</p>
        </div>

        <!-- Action Button -->
        <div class="mb-4">
            <a asp-action="Create" class="admin-btn admin-btn-success">
                <i class="fas fa-plus-circle"></i> Thêm Mái Ấm Mới
            </a>
        </div>

        <!-- Table -->
        <div class="admin-table-wrapper">
            <table class="table admin-table">
                <thead>
                    <tr>
                        <th style="width: 60px;">#</th>
                        <th><i class="fas fa-building me-2"></i>Tên Mái Ấm</th>
                        <th><i class="fas fa-map-marker-alt me-2"></i>Địa Chỉ</th>
                        <th><i class="fas fa-money-bill-wave me-2"></i>Quỹ Tài Trợ (VNĐ)</th>
                        <th class="text-center"><i class="fas fa-cog me-2"></i>Hành Động</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Any())
                    {
                        int index = 1;
                        foreach (var maiAm in Model)
                        {
                            <tr>
                                <td><strong>@index</strong></td>
                                <td>
                                    <strong>@maiAm.Name</strong>
                                </td>
                                <td>@maiAm.Address</td>
                                <td>
                                    <span class="admin-badge admin-badge-success">
                                        <i class="fas fa-coins"></i> @maiAm.Fund.ToString("N0")
                                    </span>
                                </td>
                                <td>
                                    <div class="d-flex gap-2 justify-content-center">
                                        <a asp-action="ManageProfiles" asp-route-id="@maiAm.Id" 
                                           class="admin-btn admin-btn-info admin-btn-sm">
                                            <i class="fas fa-file-alt"></i> Hồ sơ
                                        </a>
                                        <a asp-action="ManageSupporters" asp-route-id="@maiAm.Id" 
                                           class="admin-btn admin-btn-primary admin-btn-sm">
                                            <i class="fas fa-hand-holding-heart"></i> Tài trợ
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@maiAm.Id" 
                                           class="admin-btn admin-btn-warning admin-btn-sm">
                                            <i class="fas fa-edit"></i> Sửa
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@maiAm.Id" 
                                           class="admin-btn admin-btn-danger admin-btn-sm"
                                           onclick="return confirm('Bạn có chắc muốn xóa mái ấm này?');">
                                            <i class="fas fa-trash-alt"></i> Xóa
                                        </a>
                                    </div>
                                </td>
                            </tr>
                            index++;
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="admin-empty-state">
                                <i class="fas fa-inbox"></i>
                                <h4>Không có dữ liệu</h4>
                                <p>Chưa có mái ấm nào trong hệ thống. Hãy thêm mái ấm mới!</p>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
