@model IEnumerable<MaiAmTinhThuong.Models.MaiAm>

<div class="container mt-4">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-white">
            <h4 class="text-center text-primary mb-0 fw-bold">📋 Danh sách Mái ấm</h4>
        </div>
        <div class="card-body p-3">
            <div class="text-end mb-3">
                <a asp-action="Create" class="btn btn-success btn-sm">
                    <i class="bi bi-plus-circle"></i> Thêm Mái ấm mới
                </a>
            </div>

            <div class="table-responsive">
                <table class="table table-striped table-bordered align-middle text-center">
                    <thead class="table-light">
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Tên</th>
                            <th scope="col">Địa chỉ</th>
                            <th scope="col">Quỹ tài trợ (VNĐ)</th>
                            <th scope="col">Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Any())
                        {
                            int index = 1;
                            foreach (var maiAm in Model)
                            {
                                <tr>
                                    <td>@index</td>
                                    <td class="text-start">@maiAm.Name</td>
                                    <td class="text-start">@maiAm.Address</td>
                                    <td class="text-end">@maiAm.Fund.ToString("N0")</td>
                                    <td>
                                        <div class="btn-group btn-group-sm" role="group">
                                            <a asp-action="ManageProfiles" asp-route-id="@maiAm.Id" class="btn btn-outline-info">Hồ sơ</a>
                                            <a asp-action="ManageSupporters" asp-route-id="@maiAm.Id" class="btn btn-outline-primary">Tài trợ</a>
                                            <a asp-action="Edit" asp-route-id="@maiAm.Id" class="btn btn-outline-warning">Sửa</a>
                                            <a asp-action="Delete" asp-route-id="@maiAm.Id" class="btn btn-outline-danger">Xóa</a>
                                        </div>
                                    </td>
                                </tr>
                                index++;
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5" class="text-center text-muted">Không có dữ liệu mái ấm.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
