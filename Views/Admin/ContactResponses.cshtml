@model IEnumerable<ContactResponse>

@{
    ViewData["Title"] = "Danh Sách Phản Hồi Liên Hệ";
}

<div class="admin-container">
    <div class="container-fluid px-4">
        <!-- Page Header -->
        <div class="admin-page-header">
            <h2><i class="fas fa-comments me-3"></i>Danh Sách Phản Hồi Liên Hệ</h2>
            <p>Xem và quản lý các phản hồi từ form liên hệ của người dùng</p>
        </div>

        @* Toast notifications được xử lý trong _Layout *@

        <!-- Table -->
        <div class="admin-table-wrapper">
            <table class="table admin-table">
                <thead>
                    <tr>
                        <th style="width: 60px;">#</th>
                        <th><i class="fas fa-user me-2"></i>Họ Tên</th>
                        <th><i class="fas fa-envelope me-2"></i>Email</th>
                        <th><i class="fas fa-comment-dots me-2"></i>Nội Dung</th>
                        <th><i class="fas fa-calendar me-2"></i>Ngày Gửi</th>
                        <th class="text-center"><i class="fas fa-cog me-2"></i>Hành Động</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td><strong>@item.Id</strong></td>
                                <td>
                                    <strong>@item.Name</strong>
                                </td>
                                <td>
                                    <a href="mailto:@item.Email" class="text-decoration-none">
                                        <i class="fas fa-envelope text-muted me-2"></i>@item.Email
                                    </a>
                                </td>
                                <td>
                                    @{
                                        var message = item.Message ?? "";
                                        var messagePreview = message.Length > 100 ? message.Substring(0, 100) + "..." : message;
                                    }
                                    <span title="@message">@messagePreview</span>
                                </td>
                                <td>@item.SubmittedAt.ToString("dd/MM/yyyy HH:mm")</td>
                                <td>
                                    <form method="post" asp-controller="Admin" asp-action="DeleteContactResponse" 
                                          asp-route-id="@item.Id" style="display:inline;" 
                                          onsubmit="return confirm('Bạn có chắc muốn xóa phản hồi này?');">
                                        <button type="submit" class="admin-btn admin-btn-danger admin-btn-sm">
                                            <i class="fas fa-trash-alt"></i> Xóa
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="admin-empty-state">
                                <i class="fas fa-inbox"></i>
                                <h4>Không có dữ liệu</h4>
                                <p>Chưa có phản hồi nào từ người dùng.</p>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
