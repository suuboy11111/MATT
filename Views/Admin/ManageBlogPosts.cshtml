@model MaiAmTinhThuong.Helpers.PagedResult<MaiAmTinhThuong.Models.BlogPost>
@using System.Linq

@{
    ViewData["Title"] = "Quản lý bài viết";
}

@* Toast Notifications *@
@await Html.PartialAsync("_ToastNotifications")

<div class="admin-container">
    <div class="container-fluid px-4">
        <!-- Page Header -->
        <div class="admin-page-header">
            <h2><i class="fas fa-blog me-3"></i>Quản Lý Bài Viết</h2>
            <p>Duyệt và quản lý các bài viết từ người dùng</p>
        </div>

        <!-- Search & Filter Form -->
        <div class="admin-search-form">
            <form method="get" asp-action="ManageBlogPosts" class="row g-3">
                <div class="col-md-4">
                    <div class="input-group">
                        <span class="input-group-text bg-white border-end-0">
                            <i class="fas fa-search text-muted"></i>
                        </span>
                        <input type="text" name="searchString" class="form-control admin-form-control border-start-0" 
                               placeholder="Tìm kiếm theo tiêu đề, nội dung, tác giả..." 
                               value="@ViewBag.SearchString" />
                    </div>
                </div>
                <div class="col-md-2">
                    <select name="filterApproved" class="form-select admin-form-control">
                        <option value="">Tất cả trạng thái</option>
                        <option value="approved" selected="@(ViewBag.FilterApproved == "approved")">Đã duyệt</option>
                        <option value="pending" selected="@(ViewBag.FilterApproved == "pending")">Chờ duyệt</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <select name="pageSize" class="form-select admin-form-control">
                        @foreach (var option in ViewBag.PageSizeOptions as List<Microsoft.AspNetCore.Mvc.Rendering.SelectListItem>)
                        {
                            <option value="@option.Value" selected="@(option.Selected)">@option.Text / trang</option>
                        }
                    </select>
                </div>
                <div class="col-md-4">
                    <button type="submit" class="admin-btn admin-btn-primary">
                        <i class="fas fa-search"></i> Tìm kiếm
                    </button>
                    <a asp-action="ManageBlogPosts" class="admin-btn admin-btn-secondary">
                        <i class="fas fa-times"></i> Xóa bộ lọc
                    </a>
                </div>
            </form>
        </div>

        <!-- Table -->
        <div class="admin-table-wrapper">
            <table class="table admin-table">
                <thead>
                    <tr>
                        <th style="width: 60px;">#</th>
                        <th><i class="fas fa-heading me-2"></i>Tiêu Đề</th>
                        <th><i class="fas fa-align-left me-2"></i>Nội Dung</th>
                        <th><i class="fas fa-user me-2"></i>Tác Giả</th>
                        <th><i class="fas fa-calendar me-2"></i>Ngày Gửi</th>
                        <th><i class="fas fa-info-circle me-2"></i>Trạng Thái</th>
                        <th class="text-center"><i class="fas fa-cog me-2"></i>Thao Tác</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Items != null && Model.Items.Any())
                    {
                        @foreach (var post in Model.Items)
                        {
                            <tr>
                                <td><strong>@post.Id</strong></td>
                                <td>
                                    <strong>@(post.Title ?? "N/A")</strong>
                                </td>
                                <td>
                                    @{
                                        var content = post.Content ?? "";
                                        var contentPreview = content.Length > 80 ? content.Substring(0, 80) + "..." : content;
                                    }
                                    <span title="@content">@contentPreview</span>
                                </td>
                                <td>@(post.Author?.FullName ?? "N/A")</td>
                                <td>@post.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                                <td>
                                    @if (post.IsApproved)
                                    {
                                        <span class="admin-badge admin-badge-success">
                                            <i class="fas fa-check-circle"></i> Đã duyệt
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="admin-badge admin-badge-warning">
                                            <i class="fas fa-clock"></i> Chờ duyệt
                                        </span>
                                    }
                                </td>
                                <td>
                                    <div class="d-flex gap-2 justify-content-center">
                                        @if (!post.IsApproved)
                                        {
                                            <form method="post" action="@Url.Action("ApproveBlogPost", "Admin")" asp-antiforgery="true" style="display:inline;" id="approveForm_@post.Id">
                                                <input type="hidden" name="id" value="@post.Id" />
                                                <button type="submit" class="admin-btn admin-btn-success admin-btn-sm" 
                                                        onclick="event.preventDefault(); if(confirm('Bạn có chắc muốn duyệt bài viết này?')) { document.getElementById('approveForm_@post.Id').submit(); }">
                                                    <i class="fas fa-check"></i> Duyệt
                                                </button>
                                            </form>
                                        }
                                        <form method="post" action="@Url.Action("DeleteBlogPost", "Admin")" asp-antiforgery="true" 
                                              onsubmit="return confirm('Bạn có chắc muốn xóa?');">
                                            <input type="hidden" name="id" value="@post.Id" />
                                            <button type="submit" class="admin-btn admin-btn-danger admin-btn-sm">
                                                <i class="fas fa-trash-alt"></i> Xóa
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="7" class="admin-empty-state">
                                <i class="fas fa-inbox"></i>
                                <h4>Không có dữ liệu</h4>
                                <p>Không tìm thấy bài viết nào phù hợp với tiêu chí tìm kiếm.</p>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Pagination -->
        @if (Model.TotalPages > 1)
        {
            <nav aria-label="Page navigation" class="admin-pagination">
                <ul class="pagination mb-0">
                    <li class="page-item @(!Model.HasPreviousPage ? "disabled" : "")">
                        <a class="page-link admin-page-link" href="@Url.Action("ManageBlogPosts", new { 
                            page = Model.PageNumber - 1, 
                            pageSize = Model.PageSize,
                            searchString = ViewBag.SearchString,
                            filterApproved = ViewBag.FilterApproved
                        })">
                            <i class="fas fa-chevron-left"></i> Trước
                        </a>
                    </li>
                    
                    @for (int i = Math.Max(1, Model.PageNumber - 2); i <= Math.Min(Model.TotalPages, Model.PageNumber + 2); i++)
                    {
                        <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                            <a class="page-link admin-page-link" href="@Url.Action("ManageBlogPosts", new { 
                                page = i, 
                                pageSize = Model.PageSize,
                                searchString = ViewBag.SearchString,
                                filterApproved = ViewBag.FilterApproved
                            })">@i</a>
                        </li>
                    }
                    
                    <li class="page-item @(!Model.HasNextPage ? "disabled" : "")">
                        <a class="page-link admin-page-link" href="@Url.Action("ManageBlogPosts", new { 
                            page = Model.PageNumber + 1, 
                            pageSize = Model.PageSize,
                            searchString = ViewBag.SearchString,
                            filterApproved = ViewBag.FilterApproved
                        })">
                            Sau <i class="fas fa-chevron-right"></i>
                        </a>
                    </li>
                </ul>
            </nav>
            
            <div class="text-center text-muted mt-3">
                <i class="fas fa-info-circle me-2"></i>
                Hiển thị <strong>@((Model.PageNumber - 1) * Model.PageSize + 1)</strong> - 
                <strong>@(Math.Min(Model.PageNumber * Model.PageSize, Model.TotalItems))</strong> 
                trong tổng số <strong>@Model.TotalItems</strong> kết quả
            </div>
        }
    </div>
</div>
