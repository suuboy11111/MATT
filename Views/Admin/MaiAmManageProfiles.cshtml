@model MaiAmTinhThuong.Models.MaiAm

<div class="card shadow-sm border-0">
    <div class="card-header bg-white">
        <h4 class="text-center text-primary fw-bold mb-0">📁 Quản lý hồ sơ: @ViewBag.MaiAmName</h4>
    </div>
    <div class="card-body p-3">
        <div class="mb-3 text-end">
            <a asp-action="CreateProfile" asp-route-maiAmId="@Model.Id" class="btn btn-success btn-sm">
                <i class="bi bi-plus-circle"></i> Thêm hồ sơ mới
            </a>
            <a asp-action="Manage" class="btn btn-secondary btn-sm">
                <i class="bi bi-arrow-left"></i> Quay lại danh sách Mái ấm
            </a>
        </div>

        <!-- Form tìm kiếm và lọc -->
        <form method="get" asp-action="ManageProfiles" asp-route-id="@Model.Id" class="mb-3">
            <div class="row g-2">
                <div class="col-md-3">
                    <input type="text" name="searchString" class="form-control form-control-sm" 
                           placeholder="Tìm kiếm..." value="@ViewBag.SearchString" />
                </div>
                <div class="col-md-2">
                    <select name="filterApproved" class="form-select form-select-sm">
                        <option value="">Tất cả trạng thái</option>
                        <option value="true" selected="@(ViewBag.FilterApproved == "true")">Đã duyệt</option>
                        <option value="false" selected="@(ViewBag.FilterApproved == "false")">Chưa duyệt</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <select name="filterSupported" class="form-select form-select-sm">
                        <option value="">Tất cả hỗ trợ</option>
                        <option value="reason" selected="@(ViewBag.FilterSupported == "reason")">Hỗ trợ HC</option>
                        <option value="health" selected="@(ViewBag.FilterSupported == "health")">Hỗ trợ SK</option>
                        <option value="general" selected="@(ViewBag.FilterSupported == "general")">Hỗ trợ chung</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <select name="sortBy" class="form-select form-select-sm">
                        <option value="date" selected="@(ViewBag.SortBy == "date" || ViewBag.SortBy == null)">Mới nhất</option>
                        <option value="name" selected="@(ViewBag.SortBy == "name")">Tên A-Z</option>
                        <option value="age" selected="@(ViewBag.SortBy == "age")">Tuổi</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <button type="submit" class="btn btn-primary btn-sm">
                        <i class="bi bi-search"></i> Tìm kiếm
                    </button>
                    <a asp-action="ManageProfiles" asp-route-id="@Model.Id" class="btn btn-secondary btn-sm">
                        <i class="bi bi-x-circle"></i> Xóa bộ lọc
                    </a>
                </div>
            </div>
        </form>

        <div class="table-responsive">
            <table class="table table-bordered table-striped table-hover align-middle text-center">
                <thead class="table-light">
                    <tr>
                        <th>Họ tên</th>
                        <th>Tuổi</th>
                        <th>Hoàn cảnh</th>
                        <th>Sức khỏe</th>
                        <th>Duyệt</th>
                        <th>Hỗ trợ HC</th>
                        <th>Hỗ trợ SK</th>
                        <th>Hỗ trợ chung</th>
                        <th>Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var request in Model.SupportRequests)
                    {
                        <tr>
                            <td class="text-start">@request.Name</td>
                            <td>@request.Age</td>
                            <td class="text-start">@request.Reason</td>
                            <td class="text-start">@request.HealthStatus</td>
                            <td>
                                <button class="btn btn-success btn-sm approve-btn"
                                        data-id="@request.Id"
                                @(request.IsApproved ? "disabled" : "")>
                                    @(request.IsApproved ? "Đã duyệt" : "Duyệt")
                                </button>
                            </td>
                            <td>
                                <input type="checkbox" data-id="@request.Id"
                                       class="form-check-input toggle-support-reason"
                                @(request.IsSupportedReason ? "checked" : "") />
                            </td>
                            <td>
                                <input type="checkbox" data-id="@request.Id"
                                       class="form-check-input toggle-support-health"
                                @(request.IsSupportedHealth ? "checked" : "") />
                            </td>
                            <td>
                                <input type="checkbox" data-id="@request.Id"
                                       class="form-check-input toggle-support-general"
                                @(request.IsSupported ? "checked" : "") />
                            </td>
                            <td>
                                <div class="btn-group btn-group-sm">
                                    <a asp-action="DetailsProfile" asp-route-id="@request.Id" class="btn btn-outline-info">Xem</a>
                                    <a asp-action="EditProfile" asp-route-id="@request.Id" class="btn btn-outline-warning">Sửa</a>
                                    <a asp-action="DeleteProfile" asp-route-id="@request.Id" class="btn btn-outline-danger">Xóa</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(function () {
            $('.toggle-support-reason').change(function () {
                var id = $(this).data('id');
                $.post('@Url.Action("ToggleSupportStatus")', { id: id, supportType: 'Reason' });
            });
            $('.toggle-support-health').change(function () {
                var id = $(this).data('id');
                $.post('@Url.Action("ToggleSupportStatus")', { id: id, supportType: 'Health' });
            });
            $('.toggle-support-general').change(function () {
                var id = $(this).data('id');
                $.post('@Url.Action("ToggleSupportStatus")', { id: id, supportType: 'General' });
            });
        });
    </script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(function () {
            $('.approve-btn').click(function () {
                var btn = $(this);
                var id = btn.data('id');

                $.post('@Url.Action("ApproveSupportRequest", "MaiAmAdmin")', { id: id })
                    .done(function () {
                        btn.text('Đã duyệt');
                        btn.prop('disabled', true);
                    })
                    .fail(function () {
                        alert('Duyệt hồ sơ thất bại!');
                    });
            });
        });
    </script>
}