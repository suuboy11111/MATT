@model MaiAmTinhThuong.Models.MaiAm

<div class="card shadow-sm border-0">
    <div class="card-header bg-white">
        <h4 class="text-center text-primary fw-bold mb-0">👥 Danh sách Người Hỗ Trợ: @Model.Name</h4>
    </div>
    <div class="card-body p-3">
        <div class="mb-3">
            <a asp-action="Manage" class="btn btn-secondary btn-sm">
                <i class="bi bi-arrow-left"></i> Quay lại danh sách Mái ấm
            </a>
        </div>

        <!-- Form tìm kiếm và lọc -->
        <form method="get" asp-action="ManageSupporters" asp-route-id="@Model.Id" class="mb-3">
            <div class="row g-2">
                <div class="col-md-3">
                    <input type="text" name="searchString" class="form-control form-control-sm" 
                           placeholder="Tìm kiếm..." value="@ViewBag.SearchString" />
                </div>
                <div class="col-md-2">
                    <select name="filterApproved" class="form-select form-select-sm">
                        <option value="">Tất cả trạng thái</option>
                        <option value="true" selected="@(ViewBag.FilterApproved == "true")">Đã duyệt</option>
                        <option value="false" selected="@(ViewBag.FilterApproved == "false")">Chưa duyệt</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <select name="filterSupportType" class="form-select form-select-sm">
                        <option value="">Tất cả loại hỗ trợ</option>
                        @if (ViewBag.SupportTypes != null)
                        {
                            @foreach (var type in (List<MaiAmTinhThuong.Models.SupportType>)ViewBag.SupportTypes)
                            {
                                <option value="@type.Name" selected="@(ViewBag.FilterSupportType == type.Name)">@type.Name</option>
                            }
                        }
                    </select>
                </div>
                <div class="col-md-2">
                    <select name="sortBy" class="form-select form-select-sm">
                        <option value="date" selected="@(ViewBag.SortBy == "date" || ViewBag.SortBy == null)">Mới nhất</option>
                        <option value="name" selected="@(ViewBag.SortBy == "name")">Tên A-Z</option>
                        <option value="age" selected="@(ViewBag.SortBy == "age")">Tuổi</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <button type="submit" class="btn btn-primary btn-sm">
                        <i class="bi bi-search"></i> Tìm kiếm
                    </button>
                    <a asp-action="ManageSupporters" asp-route-id="@Model.Id" class="btn btn-secondary btn-sm">
                        <i class="bi bi-x-circle"></i> Xóa bộ lọc
                    </a>
                </div>
            </div>
        </form>

<div class="table-responsive">
    <table class="table table-bordered table-striped table-hover align-middle text-center">
    <thead>
        <tr>
            <th>Tên</th>
            <th>Tuổi</th>
            <th>Loại hỗ trợ</th>
            <th>Trạng thái duyệt</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var sma in Model.SupporterMaiAms)
        {
            var supporter = sma.Supporter;
            if (supporter != null)
            {
                var supportTypeNames = supporter.SupporterSupportTypes?.Select(sst => sst.SupportType.Name).ToList() ?? new List<string>();
                var supportTypeDisplay = string.Join(", ", supportTypeNames);
                <tr>
                    <td>@supporter.Name</td>
                    <td>@supporter.Age</td>
                    <td>@supportTypeDisplay</td>
                    <td>
                        @if (supporter.IsApproved)
                        {
                            <span class="badge bg-success">Đã duyệt</span>
                        }
                        else
                        {
                            <button type="button" class="btn btn-sm btn-primary btn-approve" data-id="@supporter.Id">Duyệt</button>
                        }
                    </td>
                    <td>
                        <a asp-action="DetailsSupporter" asp-route-id="@supporter.Id" class="btn btn-info btn-sm">Xem</a>
                        <a asp-action="EditSupporter" asp-route-id="@supporter.Id" class="btn btn-warning btn-sm">Sửa</a>
                        <a asp-action="DeleteSupporter" asp-route-id="@supporter.Id" class="btn btn-danger btn-sm">Xóa</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
</div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('.btn-approve').click(function () {
                var supporterId = $(this).data('id');
                var btn = $(this);
                $.post('@Url.Action("ApproveSupporter", "MaiAmAdmin")', { supporterId: supporterId })
                    .done(function (data) {
                        if (data.success) {
                            btn.replaceWith('<span class="badge bg-success">Đã duyệt</span>');
                        } else {
                            alert('Duyệt thất bại!');
                        }
                    })
                    .fail(function () {
                        alert('Lỗi server khi duyệt!');
                    });
            });
        });
    </script>
}
