@model MaiAmTinhThuong.Models.SupportRequest

<h2 class="mb-4">Chi tiết Hồ sơ: <span class="text-primary">@Model.Name</span></h2>

<table class="table table-striped table-bordered align-middle">
    <tbody>
        <tr>
            <th scope="row" style="width: 180px;">Tên</th>
            <td>@Model.Name</td>
        </tr>
        <tr>
            <th scope="row">Tuổi</th>
            <td>@Model.Age</td>
        </tr>
        <tr>
            <th scope="row">Giới tính</th>
            <td>@Model.Gender</td>
        </tr>
        <tr>
            <th scope="row">Số điện thoại</th>
            <td>@Model.PhoneNumber</td>
        </tr>
        <tr>
            <th scope="row">Địa chỉ</th>
            <td>@Model.Address</td>
        </tr>
        <tr>
            <th scope="row">Số CCCD</th>
            <td>@Model.CCCD</td>
        </tr>
        <tr>
            <th scope="row">Hoàn cảnh</th>
            <td>@Model.Reason</td>
        </tr>
        <tr>
            <th scope="row">Tình trạng sức khỏe</th>
            <td>@Model.HealthStatus</td>
        </tr>
        <tr>
            <th scope="row">Đã duyệt</th>
            <td>
                @if (Model.IsApproved)
                {
                    <span class="badge bg-success"><i class="bi bi-check-lg"></i> Đã duyệt</span>
                }
                else
                {
                    <span class="badge bg-danger"><i class="bi bi-x-lg"></i> Chưa duyệt</span>
                }
            </td>
        </tr>
        <tr>
            <th scope="row">Hỗ trợ hoàn cảnh</th>
            <td>
                @if (Model.IsSupportedReason)
                {
                    <span class="badge bg-success"><i class="bi bi-check-lg"></i> Đã hỗ trợ</span>
                }
                else
                {
                    <span class="badge bg-secondary"><i class="bi bi-x-lg"></i> Chưa hỗ trợ</span>
                }
            </td>
        </tr>
        <tr>
            <th scope="row">Hỗ trợ sức khỏe</th>
            <td>
                @if (Model.IsSupportedHealth)
                {
                    <span class="badge bg-success"><i class="bi bi-check-lg"></i> Đã hỗ trợ</span>
                }
                else
                {
                    <span class="badge bg-secondary"><i class="bi bi-x-lg"></i> Chưa hỗ trợ</span>
                }
            </td>
        </tr>
        <tr>
            <th scope="row">Hỗ trợ chung</th>
            <td>
                @if (Model.IsSupported)
                {
                    <span class="badge bg-success"><i class="bi bi-check-lg"></i> Đã hỗ trợ</span>
                }
                else
                {
                    <span class="badge bg-secondary"><i class="bi bi-x-lg"></i> Chưa hỗ trợ</span>
                }
            </td>
        </tr>
        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <tr>
                <th scope="row">Ảnh</th>
                <td>
                    <img src="@Model.ImageUrl" alt="Ảnh hồ sơ" class="img-thumbnail" style="max-width: 200px; max-height: 200px; object-fit: cover;" />
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="d-flex gap-2 mt-3">
    <a asp-action="ManageProfiles" asp-route-id="@Model.MaiAmId" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Quay lại
    </a>
    <a asp-action="EditProfile" asp-route-id="@Model.Id" class="btn btn-warning">
        <i class="bi bi-pencil-square"></i> Sửa
    </a>
    <a asp-action="DeleteProfile" asp-route-id="@Model.Id" class="btn btn-danger" onclick="return confirm('Bạn có chắc muốn xóa hồ sơ này?');">
        <i class="bi bi-trash"></i> Xóa
    </a>
</div>
