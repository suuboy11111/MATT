@model MaiAmTinhThuong.Models.SupportRequest

@{
    ViewData["Title"] = "Đăng ký Hồ sơ Người Cần Hỗ Trợ";
}

<div class="form-page-container">
    <div class="container">
        <!-- Page Header -->
        <div class="form-page-header">
            <div class="form-page-icon">
                <i class="fas fa-file-alt"></i>
            </div>
            <h1>Đăng ký Hồ sơ Người Cần Hỗ Trợ</h1>
            <p>Vui lòng điền đầy đủ thông tin để chúng tôi có thể hỗ trợ bạn tốt nhất</p>
        </div>

        <!-- Form Card -->
        <div class="form-card">
            <form asp-action="CreateRequest" method="post" enctype="multipart/form-data" class="modern-form">

                <!-- Thông tin cơ bản -->
                <div class="form-section">
                    <h3 class="form-section-title">
                        <i class="fas fa-info-circle me-2"></i>
                        Thông tin cơ bản
                    </h3>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group-modern">
                                <label asp-for="Name" class="form-label-modern">
                                    <i class="fas fa-user me-2"></i>Họ và tên <span class="text-danger">*</span>
                                </label>
                                <input asp-for="Name" class="form-control-modern" placeholder="Nhập họ và tên" required />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group-modern">
                                <label asp-for="Age" class="form-label-modern">
                                    <i class="fas fa-birthday-cake me-2"></i>Tuổi <span class="text-danger">*</span>
                                </label>
                                <input asp-for="Age" class="form-control-modern" type="number" min="0" max="150" placeholder="Nhập tuổi" required />
                                <span asp-validation-for="Age" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group-modern">
                                <label asp-for="Gender" class="form-label-modern">
                                    <i class="fas fa-venus-mars me-2"></i>Giới tính <span class="text-danger">*</span>
                                </label>
                                <select asp-for="Gender" class="form-control-modern" required>
                                    <option value="">-- Chọn giới tính --</option>
                                    <option value="Nam">Nam</option>
                                    <option value="Nu">Nữ</option>
                                    <option value="Khac">Khác</option>
                                </select>
                                <span asp-validation-for="Gender" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group-modern">
                                <label asp-for="PhoneNumber" class="form-label-modern">
                                    <i class="fas fa-phone me-2"></i>Số điện thoại <span class="text-danger">*</span>
                                </label>
                                <input asp-for="PhoneNumber" class="form-control-modern" placeholder="0912345678 hoặc +84912345678" required />
                                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="form-group-modern">
                        <label asp-for="Address" class="form-label-modern">
                            <i class="fas fa-map-marker-alt me-2"></i>Địa chỉ
                        </label>
                        <input asp-for="Address" class="form-control-modern" placeholder="Nhập địa chỉ" />
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>

                    <div class="form-group-modern">
                        <label asp-for="CCCD" class="form-label-modern">
                            <i class="fas fa-id-card me-2"></i>Số CCCD
                        </label>
                        <input asp-for="CCCD" class="form-control-modern" placeholder="Nhập 12 chữ số" maxlength="12" pattern="[0-9]{12}" />
                        <span asp-validation-for="CCCD" class="text-danger"></span>
                    </div>
                </div>

                <!-- Thông tin hỗ trợ -->
                <div class="form-section">
                    <h3 class="form-section-title">
                        <i class="fas fa-heart me-2"></i>
                        Thông tin hỗ trợ
                    </h3>

                    <div class="form-group-modern">
                        <label asp-for="Reason" class="form-label-modern">
                            <i class="fas fa-file-alt me-2"></i>Hoàn cảnh
                        </label>
                        <textarea asp-for="Reason" class="form-control-modern" rows="4" placeholder="Mô tả hoàn cảnh cần hỗ trợ..."></textarea>
                        <span asp-validation-for="Reason" class="text-danger"></span>
                    </div>

                    <div class="form-group-modern">
                        <label asp-for="HealthStatus" class="form-label-modern">
                            <i class="fas fa-heartbeat me-2"></i>Tình trạng sức khỏe
                        </label>
                        <textarea asp-for="HealthStatus" class="form-control-modern" rows="4" placeholder="Mô tả tình trạng sức khỏe..."></textarea>
                        <span asp-validation-for="HealthStatus" class="text-danger"></span>
                    </div>
                </div>

                <!-- Thông tin bổ sung -->
                <div class="form-section">
                    <h3 class="form-section-title">
                        <i class="fas fa-cog me-2"></i>
                        Thông tin bổ sung
                    </h3>

                    <div class="form-group-modern">
                        <label class="form-label-modern">
                            <i class="fas fa-home me-2"></i>Mái ấm <span class="text-danger">*</span>
                        </label>
                        <select asp-for="MaiAmId" asp-items="ViewBag.MaiAms" class="form-control-modern" required>
                            <option value="">-- Chọn Mái ấm --</option>
                        </select>
                        <span asp-validation-for="MaiAmId" class="text-danger"></span>
                    </div>

                    <div class="form-group-modern">
                        <label class="form-label-modern">
                            <i class="fas fa-image me-2"></i>Ảnh đại diện (tùy chọn)
                        </label>
                        <div class="file-upload-wrapper">
                            <input type="file" name="ImageFile" accept="image/*" class="form-control-modern" id="imageFile" onchange="previewImage(this)" />
                            <div class="image-preview" id="imagePreview" style="display: none;">
                                <img id="previewImg" src="" alt="Preview" />
                                <button type="button" class="btn-remove-image" onclick="removeImage()">
                                    <i class="fas fa-times"></i>
                                </button>
                            </div>
                        </div>
                        <small class="form-text text-muted">
                            <i class="fas fa-info-circle me-1"></i>
                            Chấp nhận: JPG, PNG, GIF (tối đa 5MB)
                        </small>
                    </div>
                </div>

                <!-- Submit Button -->
                <div class="form-submit-wrapper">
                    <button type="submit" class="btn-submit-modern">
                        <i class="fas fa-paper-plane me-2"></i>
                        Đăng ký
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    .form-page-container {
        min-height: 100vh;
        background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
        padding: 2rem 0 4rem 0;
    }

    .form-page-header {
        text-align: center;
        margin-bottom: 2rem;
        color: white;
    }

    .form-page-icon {
        width: 80px;
        height: 80px;
        margin: 0 auto 1rem;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 2rem;
        box-shadow: 0 8px 20px rgba(102, 126, 234, 0.3);
    }

    .form-page-header h1 {
        font-size: 2.5rem;
        font-weight: 800;
        margin-bottom: 0.5rem;
        color: #2c3e50;
        text-shadow: 2px 2px 4px rgba(0,0,0,0.1);
    }

    .form-page-header p {
        font-size: 1.1rem;
        color: #6c757d;
        margin: 0;
    }

    .form-card {
        background: white;
        border-radius: 20px;
        box-shadow: 0 10px 40px rgba(0,0,0,0.1);
        padding: 2.5rem;
        max-width: 900px;
        margin: 0 auto;
    }

    .form-section {
        margin-bottom: 2.5rem;
        padding: 1.5rem;
        background: #f8f9fa;
        border-radius: 15px;
        border: 1px solid #e9ecef;
    }

    .form-section-title {
        font-size: 1.3rem;
        font-weight: 700;
        color: #2c3e50;
        margin-bottom: 1.5rem;
        padding-bottom: 0.75rem;
        border-bottom: 2px solid #e0e0e0;
    }

    .form-group-modern {
        margin-bottom: 1.5rem;
    }

    .form-label-modern {
        font-weight: 600;
        color: #34495e;
        margin-bottom: 0.5rem;
        display: block;
        font-size: 0.95rem;
    }

    .form-label-modern i {
        color: #ff6b9d;
        width: 20px;
    }

    .form-control-modern {
        width: 100%;
        padding: 12px 16px;
        border: 2px solid #e0e0e0;
        border-radius: 10px;
        font-size: 1rem;
        transition: all 0.3s ease;
        background: white;
    }

    .form-control-modern:focus {
        border-color: #ff6b9d;
        box-shadow: 0 0 0 0.2rem rgba(255, 107, 157, 0.25);
        outline: none;
    }

    .file-upload-wrapper {
        position: relative;
    }

    .image-preview {
        margin-top: 1rem;
        position: relative;
        display: inline-block;
    }

    .image-preview img {
        max-width: 200px;
        max-height: 200px;
        border-radius: 10px;
        border: 3px solid #ff6b9d;
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
    }

    .btn-remove-image {
        position: absolute;
        top: -10px;
        right: -10px;
        background: #dc3545;
        color: white;
        border: none;
        border-radius: 50%;
        width: 30px;
        height: 30px;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        box-shadow: 0 2px 8px rgba(0,0,0,0.2);
    }

    .btn-remove-image:hover {
        background: #c82333;
    }

    .form-submit-wrapper {
        margin-top: 2rem;
        text-align: center;
        padding-top: 2rem;
        border-top: 2px solid #e9ecef;
    }

    .btn-submit-modern {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border: none;
        padding: 14px 40px;
        font-size: 1.1rem;
        font-weight: 600;
        border-radius: 50px;
        cursor: pointer;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(102, 126, 234, 0.4);
    }

    .btn-submit-modern:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(102, 126, 234, 0.5);
    }

    .btn-submit-modern:active {
        transform: translateY(0);
    }

    @@media (max-width: 768px) {
        .form-page-header h1 {
            font-size: 1.8rem;
        }

        .form-card {
            padding: 1.5rem;
            border-radius: 15px;
        }

        .form-section {
            padding: 1rem;
        }

        .form-section-title {
            font-size: 1.1rem;
        }
    }
</style>

<script>
    function previewImage(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();
            reader.onload = function(e) {
                document.getElementById('previewImg').src = e.target.result;
                document.getElementById('imagePreview').style.display = 'block';
            };
            reader.readAsDataURL(input.files[0]);
        }
    }

    function removeImage() {
        document.getElementById('imageFile').value = '';
        document.getElementById('imagePreview').style.display = 'none';
    }
</script>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
