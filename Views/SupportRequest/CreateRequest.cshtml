@model MaiAmTinhThuong.Models.SupportRequest

<style>
    form {
        max-width: 750px;
        margin: auto;
        padding-bottom: 90px;
    }

    .form-group {
        margin-bottom: 0.8rem;
    }

    label {
        font-weight: 500;
    }

    .btn-submit-wrapper {
        position: sticky;
        bottom: 0;
        background: #fff;
        padding: 12px 0;
        text-align: center;
        border-top: 1px solid #ddd;
        z-index: 10;
    }
</style>

<div class="container mt-4">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-white text-center">
            <h4 class="text-primary fw-bold mb-0">📋 Đăng ký Hồ sơ Người Cần Hỗ Trợ</h4>
        </div>
        <div class="card-body">
            <form asp-action="CreateRequest" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="Name">Họ và tên</label>
                    <input asp-for="Name" class="form-control" required />
                </div>

                <div class="form-group">
                    <label asp-for="Age">Tuổi</label>
                    <input asp-for="Age" class="form-control" type="number" required />
                </div>

                <div class="form-group">
                    <label asp-for="Gender">Giới tính</label>
                    <select asp-for="Gender" class="form-control" required>
                        <option value="">-- Chọn giới tính --</option>
                        <option value="Nam">Nam</option>
                        <option value="Nu">Nữ</option>
                        <option value="Khac">Khác</option>
                    </select>
                    <span asp-validation-for="Gender" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="PhoneNumber">Số điện thoại</label>
                    <input asp-for="PhoneNumber" class="form-control" placeholder="0912345678 hoặc +84912345678" required />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Address">Địa chỉ</label>
                    <input asp-for="Address" class="form-control" />
                </div>

                <div class="form-group">
                    <label asp-for="CCCD">Số CCCD</label>
                    <input asp-for="CCCD" class="form-control" placeholder="12 chữ số" maxlength="12" pattern="[0-9]{12}" />
                    <span asp-validation-for="CCCD" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Reason">Hoàn cảnh</label>
                    <textarea asp-for="Reason" class="form-control" rows="3"></textarea>
                </div>

                <div class="form-group">
                    <label asp-for="HealthStatus">Tình trạng sức khỏe</label>
                    <textarea asp-for="HealthStatus" class="form-control" rows="3"></textarea>
                </div>

                <div class="form-group">
                    <label>Mái ấm</label>
                    <select asp-for="MaiAmId" asp-items="ViewBag.MaiAms" class="form-control" required>
                        <option value="">-- Chọn Mái ấm --</option>
                    </select>
                </div>

                <div class="form-group">
                    <label>Ảnh đại diện (tùy chọn)</label>
                    <input type="file" name="ImageFile" accept="image/*" class="form-control" />
                </div>

                <div class="btn-submit-wrapper">
                    <button type="submit" class="btn btn-primary px-4">Đăng ký</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
