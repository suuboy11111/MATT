@model MaiAmTinhThuong.Models.MaiAm
@using MaiAmTinhThuong.Models
@using System.Linq

@{
    ViewData["Title"] = "Chi tiết Mái Ấm";
}

<div class="maiam-detail-container">
    <div class="container-fluid px-4 py-5">
        <!-- Header Section -->
        <div class="maiam-header">
            <div class="maiam-header-content">
                <h1 class="maiam-title">
                    <i class="fas fa-home me-3"></i>@Model.Name
                </h1>
                <p class="maiam-description">@(Model.Description ?? "Mái ấm tình thương")</p>
            </div>
            <div class="maiam-badges">
                <div class="maiam-badge maiam-badge-address">
                    <i class="fas fa-map-marker-alt me-2"></i>
                    <span>Địa chỉ: @(Model.Address ?? "Chưa cập nhật")</span>
                </div>
                <div class="maiam-badge maiam-badge-fund">
                    <i class="fas fa-money-bill-wave me-2"></i>
                    <span>Quỹ tài trợ: @Model.Fund.ToString("N0") VNĐ</span>
                </div>
            </div>
        </div>

        <!-- Tabs Navigation -->
        <ul class="nav nav-tabs maiam-tabs" id="maiAmTabs" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link active" id="supportRequests-tab" data-bs-toggle="tab" data-bs-target="#supportRequests" type="button" role="tab">
                    <i class="fas fa-users me-2"></i>Người cần hỗ trợ
                    <span class="badge rounded-pill ms-2">@Model.SupportRequests.Count</span>
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="supporters-tab" data-bs-toggle="tab" data-bs-target="#supporters" type="button" role="tab">
                    <i class="fas fa-hand-holding-heart me-2"></i>Người hỗ trợ
                    <span class="badge rounded-pill ms-2">@Model.SupporterMaiAms.Count</span>
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="statistics-tab" data-bs-toggle="tab" data-bs-target="#statistics" type="button" role="tab">
                    <i class="fas fa-chart-bar me-2"></i>Thống kê
                </button>
            </li>
        </ul>

        <!-- Tab Content -->
        <div class="tab-content maiam-tab-content">
            <!-- Tab: Người cần hỗ trợ -->
            <div class="tab-pane fade show active" id="supportRequests" role="tabpanel">
                <div class="maiam-table-card">
                    <div class="table-responsive">
                        <table class="table maiam-table">
                            <thead>
                                <tr>
                                    <th><i class="fas fa-user me-2"></i>Tên</th>
                                    <th><i class="fas fa-birthday-cake me-2"></i>Tuổi</th>
                                    <th><i class="fas fa-heart me-2"></i>Hoàn cảnh</th>
                                    <th><i class="fas fa-heartbeat me-2"></i>Tình trạng sức khỏe</th>
                                    <th class="text-center"><i class="fas fa-eye me-2"></i>Chi tiết</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.SupportRequests != null && Model.SupportRequests.Any())
                                {
                                    @foreach (var request in Model.SupportRequests)
                                    {
                                        <tr>
                                            <td><strong>@(request.Name ?? "N/A")</strong></td>
                                            <td class="text-center">@request.Age</td>
                                            <td>
                                                @{
                                                    var reason = request.Reason ?? "";
                                                    var reasonPreview = reason.Length > 40 ? reason.Substring(0, 40) + "..." : reason;
                                                }
                                                <span title="@reason">@reasonPreview</span>
                                            </td>
                                            <td>
                                                @{
                                                    var healthStatus = request.HealthStatus ?? "";
                                                    var healthPreview = healthStatus.Length > 40 ? healthStatus.Substring(0, 40) + "..." : healthStatus;
                                                }
                                                <span title="@healthStatus">@healthPreview</span>
                                            </td>
                                            <td class="text-center">
                                                <button type="button" class="btn btn-sm maiam-btn-view" 
                                                        data-bs-toggle="modal" data-bs-target="#detailModal_@(request.Id)">
                                                    <i class="fas fa-eye me-1"></i>Xem
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="5" class="text-center py-5">
                                            <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                                            <p class="text-muted">Chưa có người cần hỗ trợ nào</p>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <!-- Tab: Người hỗ trợ -->
            <div class="tab-pane fade" id="supporters" role="tabpanel">
                <div class="maiam-table-card">
                    <div class="table-responsive">
                        <table class="table maiam-table">
                            <thead>
                                <tr>
                                    <th><i class="fas fa-user me-2"></i>Tên</th>
                                    <th><i class="fas fa-birthday-cake me-2"></i>Tuổi</th>
                                    <th><i class="fas fa-tags me-2"></i>Loại hỗ trợ</th>
                                    <th class="text-center"><i class="fas fa-eye me-2"></i>Chi tiết</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.SupporterMaiAms != null && Model.SupporterMaiAms.Any())
                                {
                                    @foreach (var sma in Model.SupporterMaiAms)
                                    {
                                        var supporter = sma?.Supporter;
                                        @if (supporter != null)
                                        {
                                            <tr>
                                                <td><strong>@(supporter.Name ?? "N/A")</strong></td>
                                                <td class="text-center">@supporter.Age</td>
                                                <td>
                                                    @{
                                                        var supportTypes = supporter.SupporterSupportTypes?
                                                            .Where(sst => sst?.SupportType != null)
                                                            .Select(sst => sst.SupportType.Name)
                                                            .ToList() ?? new List<string>();
                                                    }
                                                    @if (supportTypes.Any())
                                                    {
                                                        @foreach (var type in supportTypes)
                                                        {
                                                            <span class="badge bg-info me-1">@type</span>
                                                        }
                                                    }
                                                    else
                                                    {
                                                        <span class="text-muted">Chưa có</span>
                                                    }
                                                </td>
                                                <td class="text-center">
                                                    <button type="button" class="btn btn-sm maiam-btn-view-supporter" 
                                                            data-bs-toggle="modal" data-bs-target="#supporterDetailModal_@(supporter.Id)">
                                                        <i class="fas fa-eye me-1"></i>Xem
                                                    </button>
                                                </td>
                                            </tr>
                                        }
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="4" class="text-center py-5">
                                            <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                                            <p class="text-muted">Chưa có người hỗ trợ nào</p>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <!-- Tab: Thống kê -->
            <div class="tab-pane fade" id="statistics" role="tabpanel">
                <div class="maiam-stats-container">
                    <!-- Summary Cards -->
                    <div class="row g-4 mb-4">
                        <div class="col-lg-4 col-md-6">
                            <div class="maiam-stat-card maiam-stat-card-primary">
                                <div class="maiam-stat-icon">
                                    <i class="fas fa-users"></i>
                                </div>
                                <div class="maiam-stat-content">
                                    <h3 class="maiam-stat-number">@ViewBag.TotalSupportRequests</h3>
                                    <p class="maiam-stat-label">Người cần hỗ trợ</p>
                                    <div class="maiam-stat-trend">
                                        <i class="fas fa-arrow-up text-success"></i>
                                        <span class="text-muted small">Đang tăng</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-4 col-md-6">
                            <div class="maiam-stat-card maiam-stat-card-success">
                                <div class="maiam-stat-icon">
                                    <i class="fas fa-hand-holding-heart"></i>
                                </div>
                                <div class="maiam-stat-content">
                                    <h3 class="maiam-stat-number">@ViewBag.TotalSupporters</h3>
                                    <p class="maiam-stat-label">Người hỗ trợ</p>
                                    <div class="maiam-stat-trend">
                                        <i class="fas fa-arrow-up text-success"></i>
                                        <span class="text-muted small">Đang tăng</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-4 col-md-6">
                            <div class="maiam-stat-card maiam-stat-card-info">
                                <div class="maiam-stat-icon">
                                    <i class="fas fa-money-bill-wave"></i>
                                </div>
                                <div class="maiam-stat-content">
                                    <h3 class="maiam-stat-number">@Model.Fund.ToString("N0")</h3>
                                    <p class="maiam-stat-label">VNĐ Quỹ tài trợ</p>
                                    <div class="maiam-stat-trend">
                                        <i class="fas fa-chart-line text-info"></i>
                                        <span class="text-muted small">Tổng quỹ</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Charts Section -->
                    <div class="row g-4">
                        <div class="col-lg-8">
                            <div class="maiam-chart-card">
                                <div class="maiam-chart-header">
                                    <h5><i class="fas fa-chart-bar me-2"></i>Biểu đồ thống kê</h5>
                                </div>
                                <div class="maiam-chart-body">
                                    <canvas id="supportChart" height="300"></canvas>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="maiam-chart-card">
                                <div class="maiam-chart-header">
                                    <h5><i class="fas fa-chart-pie me-2"></i>Phân bố hỗ trợ</h5>
                                </div>
                                <div class="maiam-chart-body">
                                    <canvas id="supportPieChart" height="300"></canvas>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Additional Stats -->
                    <div class="row g-4 mt-2">
                        <div class="col-lg-6">
                            <div class="maiam-info-card">
                                <div class="maiam-info-header">
                                    <i class="fas fa-check-circle text-success me-2"></i>
                                    <h6>Hồ sơ đã duyệt</h6>
                                </div>
                                <div class="maiam-info-content">
                                    <p class="maiam-info-number">@(Model.SupportRequests?.Count(r => r.IsApproved) ?? 0)</p>
                                    <p class="maiam-info-text">trong tổng số @(Model.SupportRequests?.Count ?? 0) hồ sơ</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="maiam-info-card">
                                <div class="maiam-info-header">
                                    <i class="fas fa-clock text-warning me-2"></i>
                                    <h6>Hồ sơ chờ duyệt</h6>
                                </div>
                                <div class="maiam-info-content">
                                    <p class="maiam-info-number">@(Model.SupportRequests?.Count(r => !r.IsApproved) ?? 0)</p>
                                    <p class="maiam-info-text">cần được xem xét</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modals for Support Requests -->
@foreach (var request in Model.SupportRequests ?? new List<SupportRequest>())
{
    <div class="modal fade" id="detailModal_@(request.Id)" tabindex="-1" aria-labelledby="detailModalLabel_@(request.Id)" aria-hidden="true">
        <div class="modal-dialog modal-lg modal-dialog-centered modal-dialog-scrollable">
            <div class="modal-content maiam-modal-content">
                <div class="modal-header maiam-modal-header">
                    <h5 class="modal-title" id="detailModalLabel_@(request.Id)">
                        <i class="fas fa-user-circle me-2"></i>Chi tiết Hồ sơ: @(request.Name ?? "N/A")
                    </h5>
                    <button type="button" class="btn-close maiam-modal-close" data-bs-dismiss="modal" aria-label="Đóng" onclick="closeModal('detailModal_@(request.Id)')">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
                <div class="modal-body maiam-modal-body">
                    <div class="row">
                        <!-- Cột trái: Thông tin -->
                        <div class="col-lg-8">
                            <div class="maiam-detail-section">
                                <h6 class="maiam-detail-section-title">
                                    <i class="fas fa-info-circle me-2"></i>Thông tin cơ bản
                                </h6>
                                <div class="row g-3">
                                    <div class="col-md-6">
                                        <div class="maiam-detail-item">
                                            <label><i class="fas fa-user me-2"></i>Họ và tên:</label>
                                            <span>@(request.Name ?? "N/A")</span>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="maiam-detail-item">
                                            <label><i class="fas fa-birthday-cake me-2"></i>Tuổi:</label>
                                            <span>@request.Age</span>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="maiam-detail-item">
                                            <label><i class="fas fa-venus-mars me-2"></i>Giới tính:</label>
                                            <span>@(request.Gender ?? "N/A")</span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="maiam-detail-item">
                                            <label><i class="fas fa-phone me-2"></i>Số điện thoại:</label>
                                            <span>@(request.PhoneNumber ?? "N/A")</span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="maiam-detail-item">
                                            <label><i class="fas fa-id-card me-2"></i>Số CCCD:</label>
                                            <span>@(request.CCCD ?? "N/A")</span>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="maiam-detail-item">
                                            <label><i class="fas fa-map-marker-alt me-2"></i>Địa chỉ:</label>
                                            <span>@(request.Address ?? "N/A")</span>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="maiam-detail-section">
                                <h6 class="maiam-detail-section-title">
                                    <i class="fas fa-file-alt me-2"></i>Thông tin hỗ trợ
                                </h6>
                                <div class="maiam-detail-item-full">
                                    <label><i class="fas fa-heart me-2"></i>Hoàn cảnh:</label>
                                    <p>@(request.Reason ?? "Chưa có thông tin")</p>
                                </div>
                                <div class="maiam-detail-item-full">
                                    <label><i class="fas fa-heartbeat me-2"></i>Tình trạng sức khỏe:</label>
                                    <p>@(request.HealthStatus ?? "Chưa có thông tin")</p>
                                </div>
                            </div>

                            <div class="maiam-detail-section">
                                <h6 class="maiam-detail-section-title">
                                    <i class="fas fa-check-circle me-2"></i>Trạng thái
                                </h6>
                                <div class="maiam-status-badges">
                                    <div class="maiam-status-item">
                                        <span class="maiam-status-label">Đã duyệt:</span>
                                        @if (request.IsApproved)
                                        {
                                            <span class="badge bg-success">
                                                <i class="fas fa-check-circle"></i> Đã duyệt
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning">
                                                <i class="fas fa-clock"></i> Chờ duyệt
                                            </span>
                                        }
                                    </div>
                                    <div class="maiam-status-item">
                                        <span class="maiam-status-label">Hỗ trợ hoàn cảnh:</span>
                                        @if (request.IsSupportedReason)
                                        {
                                            <span class="badge bg-success"><i class="fas fa-check"></i> Có</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary"><i class="fas fa-times"></i> Chưa</span>
                                        }
                                    </div>
                                    <div class="maiam-status-item">
                                        <span class="maiam-status-label">Hỗ trợ sức khỏe:</span>
                                        @if (request.IsSupportedHealth)
                                        {
                                            <span class="badge bg-success"><i class="fas fa-check"></i> Có</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary"><i class="fas fa-times"></i> Chưa</span>
                                        }
                                    </div>
                                    <div class="maiam-status-item">
                                        <span class="maiam-status-label">Hỗ trợ chung:</span>
                                        @if (request.IsSupported)
                                        {
                                            <span class="badge bg-success"><i class="fas fa-check"></i> Có</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary"><i class="fas fa-times"></i> Chưa</span>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Cột phải: Ảnh -->
                        <div class="col-lg-4">
                            <div class="maiam-detail-section">
                                <h6 class="maiam-detail-section-title">
                                    <i class="fas fa-image me-2"></i>Ảnh đại diện
                                </h6>
                                <div class="maiam-profile-image-wrapper">
                                    @if (!string.IsNullOrEmpty(request.ImageUrl))
                                    {
                                        <img src="@request.ImageUrl" class="maiam-profile-image" alt="Ảnh đại diện" 
                                             onerror="this.onerror=null; this.src='/images/default1-avatar.png';" />
                                    }
                                    else
                                    {
                                        <img src="/images/default1-avatar.png" class="maiam-profile-image" alt="Ảnh đại diện" />
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer maiam-modal-footer">
                    <button type="button" class="btn maiam-btn-close" data-bs-dismiss="modal" onclick="closeModal('detailModal_@(request.Id)')">
                        <i class="fas fa-times me-2"></i>Đóng
                    </button>
                </div>
            </div>
        </div>
    </div>
}

<!-- Modals for Supporters -->
@foreach (var sma in Model.SupporterMaiAms ?? new List<SupporterMaiAm>())
{
    var supporter = sma?.Supporter;
    @if (supporter != null)
    {
        <div class="modal fade" id="supporterDetailModal_@(supporter.Id)" tabindex="-1" aria-labelledby="supporterDetailModalLabel_@(supporter.Id)" aria-hidden="true">
            <div class="modal-dialog modal-lg modal-dialog-centered modal-dialog-scrollable">
                <div class="modal-content maiam-modal-content">
                    <div class="modal-header maiam-modal-header">
                        <h5 class="modal-title" id="supporterDetailModalLabel_@(supporter.Id)">
                            <i class="fas fa-hand-holding-heart me-2"></i>Chi tiết Người Hỗ Trợ: @(supporter.Name ?? "N/A")
                        </h5>
                        <button type="button" class="btn-close maiam-modal-close" data-bs-dismiss="modal" aria-label="Đóng" onclick="closeModal('supporterDetailModal_@(supporter.Id)')">
                            <i class="fas fa-times"></i>
                        </button>
                    </div>
                    <div class="modal-body maiam-modal-body">
                        <div class="row">
                            <div class="col-lg-8">
                                <div class="maiam-detail-section">
                                    <h6 class="maiam-detail-section-title">
                                        <i class="fas fa-info-circle me-2"></i>Thông tin cơ bản
                                    </h6>
                                    <div class="row g-3">
                                        <div class="col-md-6">
                                            <div class="maiam-detail-item">
                                                <label><i class="fas fa-user me-2"></i>Họ và tên:</label>
                                                <span>@(supporter.Name ?? "N/A")</span>
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <div class="maiam-detail-item">
                                                <label><i class="fas fa-birthday-cake me-2"></i>Tuổi:</label>
                                                <span>@supporter.Age</span>
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <div class="maiam-detail-item">
                                                <label><i class="fas fa-venus-mars me-2"></i>Giới tính:</label>
                                                <span>@(supporter.Gender ?? "N/A")</span>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="maiam-detail-item">
                                                <label><i class="fas fa-phone me-2"></i>Số điện thoại:</label>
                                                <span>@(supporter.PhoneNumber ?? "N/A")</span>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="maiam-detail-item">
                                                <label><i class="fas fa-id-card me-2"></i>Số CCCD:</label>
                                                <span>@(supporter.CCCD ?? "N/A")</span>
                                            </div>
                                        </div>
                                        <div class="col-12">
                                            <div class="maiam-detail-item">
                                                <label><i class="fas fa-map-marker-alt me-2"></i>Địa chỉ:</label>
                                                <span>@(supporter.Address ?? "N/A")</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="maiam-detail-section">
                                    <h6 class="maiam-detail-section-title">
                                        <i class="fas fa-heart me-2"></i>Loại hỗ trợ
                                    </h6>
                                    <div class="maiam-support-types">
                                        @{
                                            var types = supporter.SupporterSupportTypes?
                                                .Where(sst => sst?.SupportType != null)
                                                .Select(sst => sst.SupportType.Name)
                                                .ToList() ?? new List<string>();
                                        }
                                        @if (types.Any())
                                        {
                                            @foreach (var type in types)
                                            {
                                                <span class="badge bg-info me-2 mb-2">@type</span>
                                            }
                                        }
                                        else
                                        {
                                            <span class="text-muted">Chưa có thông tin</span>
                                        }
                                    </div>
                                </div>

                                <div class="maiam-detail-section">
                                    <h6 class="maiam-detail-section-title">
                                        <i class="fas fa-check-circle me-2"></i>Trạng thái
                                    </h6>
                                    <div class="maiam-status-badges">
                                        <div class="maiam-status-item">
                                            <span class="maiam-status-label">Đã duyệt:</span>
                                            @if (supporter.IsApproved)
                                            {
                                                <span class="badge bg-success">
                                                    <i class="fas fa-check-circle"></i> Đã duyệt
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-warning">
                                                    <i class="fas fa-clock"></i> Chờ duyệt
                                                </span>
                                            }
                                        </div>
                                        @if (supporter.MaiAm != null)
                                        {
