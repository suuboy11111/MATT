@model MaiAmTinhThuong.Models.BlogPost

<div class="container">
    <h2>Create New Post</h2>
    <form method="post" enctype="multipart/form-data" action="@Url.Action("CreatePost", "Blog")">
        <div class="form-group">
            <label for="Title">Title</label>
            <input type="text" class="form-control" id="Title" name="Title" placeholder="Enter title" required />
        </div>
        <div class="form-group">
            <label for="Content">Content</label>
            <textarea class="form-control" id="Content" name="Content" rows="4" placeholder="What's on your mind?" required></textarea>
        </div>
        <div class="form-group">
            <label for="Image">Image</label>
            <input type="file" class="form-control-file" id="Image" name="image" />
        </div>
        <button type="submit" class="btn btn-primary">Post</button>
    </form>
</div>
