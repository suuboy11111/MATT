@model MaiAmTinhThuong.Models.Supporter

<style>
    form {
        max-width: 750px;
        margin: auto;
        padding-bottom: 90px; /* để tránh che nút */
    }

    .form-group {
        margin-bottom: 0.8rem;
    }

    label {
        font-weight: 500;
    }

    .btn-submit-wrapper {
        position: sticky;
        bottom: 0;
        background: #fff;
        padding: 12px 0;
        text-align: center;
        border-top: 1px solid #ddd;
        z-index: 10;
    }
</style>

<div class="container mt-4">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-white text-center">
            <h4 class="text-primary fw-bold mb-0">🤝 Đăng ký Người Hỗ Trợ</h4>
        </div>
        <div class="card-body">
            @* Toast notifications được xử lý trong _Layout *@
            <div asp-validation-summary="All" class="text-danger mb-3"></div>
            <form asp-action="CreateSupporter" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="Name">Họ và tên</label>
                    <input asp-for="Name" class="form-control" required />
                </div>

                <div class="form-group">
                    <label asp-for="Age">Tuổi</label>
                    <input asp-for="Age" type="number" class="form-control" required />
                </div>

                <div class="form-group">
                    <label asp-for="Gender">Giới tính</label>
                    <select asp-for="Gender" class="form-control" required>
                        <option value="">-- Chọn giới tính --</option>
                        <option value="Nam">Nam</option>
                        <option value="Nu">Nữ</option>
                        <option value="Khac">Khác</option>
                    </select>
                    <span asp-validation-for="Gender" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="PhoneNumber">Số điện thoại</label>
                    <input asp-for="PhoneNumber" class="form-control" placeholder="0912345678 hoặc +84912345678" required />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Address">Địa chỉ</label>
                    <input asp-for="Address" class="form-control" />
                </div>

                <div class="form-group">
                    <label>Ảnh đại diện (tùy chọn)</label>
                    <input type="file" name="ImageFile" accept="image/*" class="form-control" />
                </div>

                <div class="form-group">
                    <label>Mái ấm</label>
                    <select asp-for="MaiAmId" asp-items="ViewBag.MaiAms" class="form-control" required>
                        <option value="">-- Chọn Mái ấm --</option>
                    </select>
                </div>

                <div class="form-group">
                    <label>Loại hỗ trợ</label>
                    <select id="supportType" name="supportTypes" class="form-control" required>
                        <option value="">-- Chọn loại hỗ trợ --</option>
                        <option value="1">Tài chính</option>
                        <option value="2">Vật tư</option>
                        <option value="3">Chỗ ở</option>
                    </select>
                    <small class="form-text text-muted">Bạn có thể chọn nhiều loại hỗ trợ</small>
                </div>

                <!-- Tabs nội dung hướng dẫn -->
                <div class="tab-content mt-3" id="supportTabsContent">
                    <div class="tab-pane fade" id="financial" role="tabpanel">
                        <h5>💰 Hỗ trợ tài chính</h5>
                        <p>Quét mã QR ngân hàng:</p>
                        <img src="/images/z6625643985564_efd68e38656a89cf3e6a31d961684b8a.jpg" alt="QR chuyển khoản" class="img-fluid mb-2" style="max-width: 300px;" />
                        <ul class="small">
                            <li><strong>Tài khoản:</strong> Mặt trận Tổ quốc Việt Nam - Ban Cứu trợ Trung ương</li>
                            <li><strong>Số TK:</strong> 0011.00.1932418 – Vietcombank</li>
                            <li><strong>Nội dung:</strong> Hỗ trợ tài chính - [Tên][SĐT]</li>
                        </ul>
                    </div>
                    <div class="tab-pane fade" id="material" role="tabpanel">
                        <h5>📦 Hỗ trợ vật tư</h5>
                        <p><strong>Gửi đến:</strong> 10/80c Song Hành Xa Lộ Hà Nội, P.Tân Phú, Thủ Đức</p>
                        <p><strong>Điện thoại:</strong> 028 3512 0785</p>
                        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3918.4276420661968!2d106.78537299999999!3d10.8550427!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x317527c3debb5aad%3A0x5fb58956eb4194d0!2zxJDhuqFpIEjhu41jIEh1dGVjaCBLaHUgRQ!5e0!3m2!1svi!2s!4v1747839572843!5m2!1svi!2s"
                                width="100%" height="220" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
                    </div>
                    <div class="tab-pane fade" id="housing" role="tabpanel">
                        <h5>🏠 Hỗ trợ chỗ ở</h5>
                        <ul class="small">
                            <li><strong>Điện thoại:</strong> 0916395023</li>
                            <li><strong>Email:</strong> <a href="mailto:suuboy11111@gmail.com">suuboy11111@gmail.com</a></li>
                            <li><strong>Facebook:</strong> <a href="https://www.facebook.com/mttqvietnam" target="_blank">mttqvietnam</a></li>
                        </ul>
                    </div>
                </div>

                <!-- Nút đăng ký cố định -->
                <div class="btn-submit-wrapper">
                    <button type="submit" class="btn btn-primary px-4">Đăng ký</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#supportType').change(function () {
                var selectedValue = $(this).val();
                $('#supportTabsContent .tab-pane').removeClass('show active');

                if (selectedValue == '1') {
                    $('#financial').addClass('show active');
                } else if (selectedValue == '2') {
                    $('#material').addClass('show active');
                } else if (selectedValue == '3') {
                    $('#housing').addClass('show active');
                }
            });

            $('#supportType').trigger('change');
        });
    </script>
}
