@model MaiAmTinhThuong.Models.Supporter

<style>
    form {
        max-width: 750px;
        margin: auto;
        padding-bottom: 90px; /* để tránh che nút */
    }

    .form-group {
        margin-bottom: 0.8rem;
    }

    label {
        font-weight: 500;
    }

    .btn-submit-wrapper {
        position: sticky;
        bottom: 0;
        background: #fff;
        padding: 12px 0;
        text-align: center;
        border-top: 1px solid #ddd;
        z-index: 10;
    }
</style>

<div class="container mt-4">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-white text-center">
            <h4 class="text-primary fw-bold mb-0">🤝 Đăng ký Người Hỗ Trợ</h4>
        </div>
        <div class="card-body">
            <form asp-action="CreateSupporter" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="Name">Họ và tên</label>
                    <input asp-for="Name" class="form-control" required />
                </div>

                <div class="form-group">
                    <label asp-for="Age">Tuổi</label>
                    <input asp-for="Age" type="number" class="form-control" required />
                </div>

                <div class="form-group">
                    <label asp-for="Gender">Giới tính</label>
                    <input asp-for="Gender" class="form-control" required />
                </div>

                <div class="form-group">
                    <label asp-for="PhoneNumber">Số điện thoại</label>
                    <input asp-for="PhoneNumber" class="form-control" required />
                </div>

                <div class="form-group">
                    <label asp-for="Address">Địa chỉ</label>
                    <input asp-for="Address" class="form-control" />
                </div>

                <div class="form-group">
                    <label>Ảnh đại diện (tùy chọn)</label>
                    <input type="file" name="ImageFile" accept="image/*" class="form-control" />
                </div>

                <div class="form-group">
                    <label>Mái ấm</label>
                    <select asp-for="MaiAmId" asp-items="ViewBag.MaiAms" class="form-control" required>
                        <option value="">-- Chọn Mái ấm --</option>
                    </select>
                </div>

                <div class="form-group">
                    <label>Loại hỗ trợ</label>
                    <select id="supportType" name="supportTypes" class="form-control" required>
                        <option value="">-- Chọn loại hỗ trợ --</option>
                        <option value="1">Tài chính</option>
                        <option value="2">Vật tư</option>
                        <option value="3">Chỗ ở</option>
                    </select>
                </div>

                <!-- Tabs nội dung hướng dẫn -->
                <div class="tab-content mt-3" id="supportTabsContent">
                    <div class="tab-pane fade" id="financial" role="tabpanel">
                        <h5>💰 Hỗ trợ tài chính</h5>
                        
                        <!-- Form thanh toán trực tiếp -->
                        <div class="card border-primary mb-3">
                            <div class="card-header bg-primary text-white">
                                <h6 class="mb-0">💳 Thanh toán trực tuyến</h6>
                            </div>
                            <div class="card-body">
                                <form id="paymentForm">
                                    <div class="mb-3">
                                        <label for="donorName" class="form-label">Họ và tên người ủng hộ</label>
                                        <input type="text" class="form-control" id="donorName" required placeholder="Nhập họ tên của bạn">
                                    </div>
                                    <div class="mb-3">
                                        <label for="donorPhone" class="form-label">Số điện thoại (tùy chọn)</label>
                                        <input type="tel" class="form-control" id="donorPhone" placeholder="Nhập số điện thoại">
                                    </div>
                                    <div class="mb-3">
                                        <label for="donationAmount" class="form-label">Số tiền ủng hộ (VNĐ)</label>
                                        <input type="number" class="form-control" id="donationAmount" min="10000" step="1000" required placeholder="Tối thiểu 10,000 VNĐ">
                                        <small class="form-text text-muted">Số tiền tối thiểu: 10,000 VNĐ</small>
                                    </div>
                                    <div class="mb-3">
                                        <label for="donationMaiAm" class="form-label">Chọn mái ấm (tùy chọn)</label>
                                        <select class="form-control" id="donationMaiAm">
                                            <option value="">-- Chọn mái ấm --</option>
                                            @if (ViewBag.MaiAms != null)
                                            {
                                                @foreach (var maiAm in ViewBag.MaiAms)
                                                {
                                                    <option value="@maiAm.Id">@maiAm.Name</option>
                                                }
                                            }
                                        </select>
                                    </div>
                                    <button type="submit" class="btn btn-primary w-100" id="btnPayNow">
                                        <i class="bi bi-credit-card"></i> Thanh toán ngay
                                    </button>
                                </form>
                            </div>
                        </div>

                        <!-- Hoặc quét mã QR -->
                        <div class="card border-secondary">
                            <div class="card-header bg-secondary text-white">
                                <h6 class="mb-0">📱 Hoặc quét mã QR chuyển khoản</h6>
                            </div>
                            <div class="card-body text-center">
                                <img src="/images/z6625643985564_efd68e38656a89cf3e6a31d961684b8a.jpg" alt="QR chuyển khoản" class="img-fluid mb-2" style="max-width: 300px;" />
                                <ul class="small text-start">
                                    <li><strong>Tài khoản:</strong> Mặt trận Tổ quốc Việt Nam - Ban Cứu trợ Trung ương</li>
                                    <li><strong>Số TK:</strong> 0011.00.1932418 – Vietcombank</li>
                                    <li><strong>Nội dung:</strong> Hỗ trợ tài chính - [Tên][SĐT]</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="tab-pane fade" id="material" role="tabpanel">
                        <h5>📦 Hỗ trợ vật tư</h5>
                        <p><strong>Gửi đến:</strong> 10/80c Song Hành Xa Lộ Hà Nội, P.Tân Phú, Thủ Đức</p>
                        <p><strong>Điện thoại:</strong> 028 3512 0785</p>
                        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3918.4276420661968!2d106.78537299999999!3d10.8550427!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x317527c3debb5aad%3A0x5fb58956eb4194d0!2zxJDhuqFpIEjhu41jIEh1dGVjaCBLaHUgRQ!5e0!3m2!1svi!2s!4v1747839572843!5m2!1svi!2s"
                                width="100%" height="220" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
                    </div>
                    <div class="tab-pane fade" id="housing" role="tabpanel">
                        <h5>🏠 Hỗ trợ chỗ ở</h5>
                        <ul class="small">
                            <li><strong>Điện thoại:</strong> 0916395023</li>
                            <li><strong>Email:</strong> <a href="mailto:suuboy11111@gmail.com">suuboy11111@gmail.com</a></li>
                            <li><strong>Facebook:</strong> <a href="https://www.facebook.com/mttqvietnam" target="_blank">mttqvietnam</a></li>
                        </ul>
                    </div>
                </div>

                <!-- Nút đăng ký cố định -->
                <div class="btn-submit-wrapper">
                    <button type="submit" class="btn btn-primary px-4">Đăng ký</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#supportType').change(function () {
                var selectedValue = $(this).val();
                $('#supportTabsContent .tab-pane').removeClass('show active');

                if (selectedValue == '1') {
                    $('#financial').addClass('show active');
                } else if (selectedValue == '2') {
                    $('#material').addClass('show active');
                } else if (selectedValue == '3') {
                    $('#housing').addClass('show active');
                }
            });

            $('#supportType').trigger('change');

            // Xử lý form thanh toán
            $('#paymentForm').on('submit', function (e) {
                e.preventDefault();
                
                var donorName = $('#donorName').val();
                var donorPhone = $('#donorPhone').val();
                var amount = parseFloat($('#donationAmount').val());
                var maiAmId = $('#donationMaiAm').val() || null;

                if (!donorName || !amount || amount < 10000) {
                    alert('Vui lòng nhập đầy đủ thông tin và số tiền tối thiểu 10,000 VNĐ');
                    return;
                }

                // Disable button
                var $btn = $('#btnPayNow');
                $btn.prop('disabled', true).html('<span class="spinner-border spinner-border-sm"></span> Đang xử lý...');

                // Gọi API tạo payment link
                $.ajax({
                    url: '/Payment/CreatePaymentLink',
                    method: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify({
                        amount: amount,
                        donorName: donorName,
                        phoneNumber: donorPhone,
                        maiAmId: maiAmId ? parseInt(maiAmId) : null
                    }),
                    success: function (response) {
                        if (response.success && response.checkoutUrl) {
                            // Redirect đến trang thanh toán
                            window.location.href = response.checkoutUrl;
                        } else {
                            alert(response.message || 'Có lỗi xảy ra khi tạo liên kết thanh toán');
                            $btn.prop('disabled', false).html('<i class="bi bi-credit-card"></i> Thanh toán ngay');
                        }
                    },
                    error: function () {
                        alert('Có lỗi xảy ra. Vui lòng thử lại sau.');
                        $btn.prop('disabled', false).html('<i class="bi bi-credit-card"></i> Thanh toán ngay');
                    }
                });
            });
        });
    </script>
}
