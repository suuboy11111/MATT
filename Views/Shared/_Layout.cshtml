    <!-- Fix: Ẩn dấu chấm đen notification bell (KHÔNG ẩn icon chuông) -->
    <style>
        /* Ẩn hoàn toàn dấu chấm đen từ notification bell - CHỈ ẩn ::after và ::before, KHÔNG ẩn icon */
        #notificationDropdown::after,
        #notificationDropdown::before {
            display: none !important;
            content: "" !important;
            border: none !important;
            width: 0 !important;
            height: 0 !important;
            margin: 0 !important;
            padding: 0 !important;
            opacity: 0 !important;
            visibility: hidden !important;
        }
        /* Ẩn dấu chấm đen từ nav-item dropdown */
        .nav-item.dropdown:has(#notificationDropdown)::after,
        .nav-item.dropdown:has(#notificationDropdown)::before {
            display: none !important;
            content: "" !important;
        }
        /* Ẩn dấu chấm đen từ notification badge và các element xung quanh */
        #notificationBadge::after,
        #notificationBadge::before {
            display: none !important;
            content: "" !important;
        }
        /* Ẩn dấu chấm đen từ các nút Đăng nhập và Đăng ký */
        .nav-item:has(.btn-outline-dark)::after,
        .nav-item:has(.btn-outline-dark)::before,
        .nav-item:has(.btn-outline-primary)::after,
        .nav-item:has(.btn-outline-primary)::before,
        .nav-item .btn-outline-dark::after,
        .nav-item .btn-outline-dark::before,
        .nav-item .btn-outline-primary::after,
        .nav-item .btn-outline-primary::before,
        a.btn-outline-dark::after,
        a.btn-outline-dark::before,
        a.btn-outline-primary::after,
        a.btn-outline-primary::before {
            display: none !important;
            content: "" !important;
            border: none !important;
            width: 0 !important;
            height: 0 !important;
            margin: 0 !important;
            padding: 0 !important;
            opacity: 0 !important;
            visibility: hidden !important;
        }
        /* Đảm bảo chuông hiển thị khi đã đăng nhập - QUAN TRỌNG */
        #notificationDropdown {
            display: inline-block !important;
            visibility: visible !important;
            opacity: 1 !important;
        }
        #notificationDropdown i,
        #notificationDropdown i.fa-bell,
        #notificationDropdown i.fas {
            display: inline-block !important;
            visibility: visible !important;
            opacity: 1 !important;
            font-family: "Font Awesome 6 Free" !important;
            font-weight: 900 !important;
        }
        /* KHÔNG ẩn ::before của icon chuông vì đó là icon thực sự */
        #notificationDropdown i.fa-bell::before,
        #notificationDropdown i.fas::before {
            content: "\f0f3" !important; /* Font Awesome bell icon code */
            font-family: "Font Awesome 6 Free" !important;
            font-weight: 900 !important;
            display: inline-block !important;
            visibility: visible !important;
            opacity: 1 !important;
        }
        /* Ẩn dấu chấm đen từ nav-item khi đã đăng nhập */
        .nav-item.dropdown:has(#notificationDropdown)::after,
        .nav-item.dropdown:has(#notificationDropdown)::before {
            display: none !important;
            content: "" !important;
        }
        /* Ẩn dấu chấm đen từ notification badge và các element xung quanh khi đã đăng nhập */
        #notificationBadge::after,
        #notificationBadge::before,
        .nav-item.dropdown:has(#notificationDropdown) > *:not(#notificationDropdown):not(.dropdown-menu)::after,
        .nav-item.dropdown:has(#notificationDropdown) > *:not(#notificationDropdown):not(.dropdown-menu)::before {
            display: none !important;
            content: "" !important;
        }
        /* Ẩn dấu chấm đen từ user dropdown khi đã đăng nhập */
        .nav-item.dropdown:has(#userDropdown)::after,
        .nav-item.dropdown:has(#userDropdown)::before {
            display: none !important;
            content: "" !important;
        }
        /* Ẩn TẤT CẢ dấu chấm đen từ mọi nơi trong navbar khi đã đăng nhập */
        .d-flex.align-items-center.gap-3::after,
        .d-flex.align-items-center.gap-3::before,
        .d-flex.align-items-center.gap-3 > *::after,
        .d-flex.align-items-center.gap-3 > *::before,
        .d-flex.align-items-center.gap-3 li::after,
        .d-flex.align-items-center.gap-3 li::before {
            display: none !important;
            content: "" !important;
        }
        /* Ẩn dấu chấm đen từ tất cả nav-item trong phần user area */
        .d-flex.align-items-center.gap-3 .nav-item::after,
        .d-flex.align-items-center.gap-3 .nav-item::before,
        .d-flex.align-items-center.gap-3 .nav-item.dropdown::after,
        .d-flex.align-items-center.gap-3 .nav-item.dropdown::before,
        .d-flex.align-items-center.gap-3 a::after,
        .d-flex.align-items-center.gap-3 a::before,
        .d-flex.align-items-center.gap-3 img::after,
        .d-flex.align-items-center.gap-3 img::before,
        .d-flex.align-items-center.gap-3 span::after,
        .d-flex.align-items-center.gap-3 span::before {
            display: none !important;
            content: "" !important;
            border: none !important;
            width: 0 !important;
            height: 0 !important;
            margin: 0 !important;
            padding: 0 !important;
            opacity: 0 !important;
            visibility: hidden !important;
        }
        /* Ẩn list-style markers (dấu chấm đen từ ul/li) */
        .navbar ul,
        .navbar li,
        .navbar-nav,
        .navbar-nav li,
        .nav-item,
        .nav-item li,
        .d-flex.align-items-center.gap-3 ul,
        .d-flex.align-items-center.gap-3 li {
            list-style: none !important;
            list-style-type: none !important;
        }
        .navbar ul::marker,
        .navbar li::marker,
        .navbar-nav::marker,
        .navbar-nav li::marker,
        .nav-item::marker,
        .nav-item li::marker,
        .d-flex.align-items-center.gap-3 ul::marker,
        .d-flex.align-items-center.gap-3 li::marker {
            display: none !important;
            content: "" !important;
        }
    </style>

