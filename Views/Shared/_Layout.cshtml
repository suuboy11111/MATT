    <script>
        // Chat history management
        const CHAT_STORAGE_KEY = 'maiam_chat_history';
        
        function loadChatHistory() {
            try {
                const history = localStorage.getItem(CHAT_STORAGE_KEY);
                if (history) {
                    const messages = JSON.parse(history);
                    const messagesContainer = document.getElementById('chatMessages');
                    if (messagesContainer && messages.length > 0) {
                        // Remove welcome message
                        const welcome = messagesContainer.querySelector('.chat-welcome');
                        if (welcome) welcome.remove();
                        
                        messages.forEach(msg => {
                            addMessageToUI(msg.text, msg.isUser, msg.time);
                        });
                        scrollToBottom();
                    }
                }
            } catch (e) {
                console.error('Error loading chat history:', e);
            }
        }

        function saveChatHistory(text, isUser) {
            try {
                let history = [];
                const stored = localStorage.getItem(CHAT_STORAGE_KEY);
                if (stored) {
                    history = JSON.parse(stored);
                }
                
                history.push({
                    text: text,
                    isUser: isUser,
                    time: new Date().toLocaleTimeString('vi-VN', { hour: '2-digit', minute: '2-digit' })
                });
                
                // Keep only last 50 messages
                if (history.length > 50) {
                    history = history.slice(-50);
                }
                
                localStorage.setItem(CHAT_STORAGE_KEY, JSON.stringify(history));
            } catch (e) {
                console.error('Error saving chat history:', e);
            }
        }

        function clearChatHistory() {
            if (confirm('B·∫°n c√≥ ch·∫Øc mu·ªën x√≥a to√†n b·ªô l·ªãch s·ª≠ chat?')) {
                localStorage.removeItem(CHAT_STORAGE_KEY);
                const messagesContainer = document.getElementById('chatMessages');
                if (messagesContainer) {
                    messagesContainer.innerHTML = `
                        <div class="chat-welcome">
                            <div class="chat-welcome-icon">üí¨</div>
                            <div class="chat-welcome-text">Xin ch√†o! M√¨nh c√≥ th·ªÉ gi√∫p g√¨ cho b·∫°n?</div>
                        </div>
                    `;
                }
            }
        }

        function addMessageToUI(text, isUser, time = null) {
            const messagesContainer = document.getElementById('chatMessages');
            if (!messagesContainer) {
                console.error('chatMessages container not found');
                return;
            }

            if (!text || text.trim() === '') {
                console.warn('Empty message text');
                return;
            }

            // Remove welcome message if exists
            const welcome = messagesContainer.querySelector('.chat-welcome');
            if (welcome) welcome.remove();

            if (!time) {
                time = new Date().toLocaleTimeString('vi-VN', { hour: '2-digit', minute: '2-digit' });
            }

            try {
                const messageDiv = document.createElement('div');
                messageDiv.className = `message ${isUser ? 'user' : 'bot'}`;
                messageDiv.innerHTML = `
                    <div class="message-content">
                        ${escapeHtml(text).replace(/\n/g, '<br>')}
                        <div class="message-time">${time}</div>
                    </div>
                `;

                messagesContainer.appendChild(messageDiv);
                scrollToBottom();
            } catch (error) {
                console.error('Error adding message to UI:', error);
            }
        }

        function scrollToBottom() {
            const messagesContainer = document.getElementById('chatMessages');
            if (messagesContainer) {
                messagesContainer.scrollTop = messagesContainer.scrollHeight;
            }
        }

        function showTypingIndicator() {
            const indicator = document.getElementById('typingIndicator');
            if (indicator) indicator.style.display = 'flex';
            scrollToBottom();
        }

        function hideTypingIndicator() {
            const indicator = document.getElementById('typingIndicator');
            if (indicator) indicator.style.display = 'none';
        }

        async function sendMessage(text = null) {
            const input = document.getElementById("chatInput");
            const sendBtn = document.getElementById("sendBtn");
            const messagesContainer = document.getElementById("chatMessages");
            
            if (!input || !messagesContainer) {
                console.error('Chat elements not found');
                return;
            }

            const messageText = text || input.value.trim();
            if (!messageText) return;

            // Disable input and button
            if (input) {
                input.value = "";
                input.disabled = true;
            }
            if (sendBtn) sendBtn.disabled = true;

            // Add user message FIRST (before API call)
            try {
                addMessageToUI(messageText, true);
                saveChatHistory(messageText, true);
            } catch (error) {
                console.error('Error adding user message:', error);
            }

            // Hide quick replies after first message
            const quickReplies = document.getElementById('quickReplies');
            if (quickReplies) quickReplies.style.display = 'none';

            // Show typing indicator
            showTypingIndicator();

            try {
                // Call API
                const resp = await fetch("/api/rulebot/ask", {
                    method: "POST",
                    headers: { "Content-Type": "application/json" },
                    body: JSON.stringify({ message: messageText })
                });

                if (!resp.ok) {
                    throw new Error(`HTTP error! status: ${resp.status}`);
                }

                const json = await resp.json();
                const reply = json?.reply ?? "Xin l·ªói, c√≥ l·ªói x·∫£y ra.";

                // Simulate typing delay for better UX
                await new Promise(resolve => setTimeout(resolve, 500));

                hideTypingIndicator();
                addMessageToUI(reply, false);
                saveChatHistory(reply, false);
            } catch (error) {
                console.error('Error sending message:', error);
                hideTypingIndicator();
                addMessageToUI("Xin l·ªói, c√≥ l·ªói x·∫£y ra khi k·∫øt n·ªëi. Vui l√≤ng th·ª≠ l·∫°i sau.", false);
            } finally {
                // Re-enable input and button
                if (input) input.disabled = false;
                if (sendBtn) sendBtn.disabled = false;
                if (input) input.focus();
            }
        }

        function sendQuickReply(text) {
            sendMessage(text);
        }

        function escapeHtml(s) {
            const div = document.createElement('div');
            div.textContent = s;
            return div.innerHTML;
        }

        document.addEventListener("DOMContentLoaded", function () {
            // Toggle chat
            const header = document.getElementById("chatHeader");
            const minimizeBtn = document.getElementById("chatMinimize");
            const chatBody = document.getElementById("chatBody");
            
            function toggleChat() {
                if (chatBody) {
                    const isOpen = chatBody.style.display === "block" || chatBody.style.display === "";
                    chatBody.style.display = isOpen ? "none" : "block";
                    if (!isOpen) {
                        // Load history when opening
                        loadChatHistory();
                        const input = document.getElementById("chatInput");
                        if (input) input.focus();
                    }
                }
            }

            if (header) {
                header.addEventListener("click", (e) => {
                    // Don't toggle if clicking on minimize button
                    if (!e.target.closest('.chat-header-actions')) {
                        toggleChat();
                    }
                });
            }

            if (minimizeBtn) {
                minimizeBtn.addEventListener("click", (e) => {
                    e.stopPropagation();
                    toggleChat();
                });
            }

            // Enter key to send
            const input = document.getElementById("chatInput");
            if (input) {
                input.addEventListener("keypress", function (e) {
                    if (e.key === "Enter" && !e.shiftKey) {
                        e.preventDefault();
                        sendMessage();
                    }
                });
            }

            // Load chat history on page load
            loadChatHistory();

            // Load notifications
            @if (User.Identity.IsAuthenticated)
            {
                <text>
                loadNotifications();
                // Refresh notifications m·ªói 30 gi√¢y
                setInterval(loadNotifications, 30000);
                
                // Auto-refresh khi dropdown ƒë∆∞·ª£c m·ªü
                const notificationDropdown = document.getElementById("notificationDropdown");
                if (notificationDropdown) {
                    // X√≥a t·∫•t c·∫£ d·∫•u ch·∫•m ƒëen xung quanh notification bell - CH·ªà ·∫©n ::after v√† ::before c·ªßa link
                    const style = document.createElement('style');
                    style.textContent = `
                        #notificationDropdown::after,
                        #notificationDropdown::before,
                        .nav-item.dropdown:has(#notificationDropdown)::after,
                        .nav-item.dropdown:has(#notificationDropdown)::before {
                            display: none !important;
                            content: "" !important;
                            border: none !important;
                            width: 0 !important;
                            height: 0 !important;
                            margin: 0 !important;
                            padding: 0 !important;
                            opacity: 0 !important;
                            visibility: hidden !important;
                        }
                    `;
                    document.head.appendChild(style);
                    
                    const dropdownElement = new bootstrap.Dropdown(notificationDropdown);
                    notificationDropdown.addEventListener('shown.bs.dropdown', function () {
                        loadNotifications();
                    });
                }

                // Mark all as read
                const markAllReadBtn = document.getElementById("markAllReadBtn");
                if (markAllReadBtn) {
                    markAllReadBtn.addEventListener("click", async function(e) {
                        e.stopPropagation();
                        await fetch('/Notification/MarkAllAsRead', { method: 'POST' });
                        loadNotifications();
                    });
                }
                </text>
            }
        });

        function escapeHtml(text) {
            if (!text) return '';
            const div = document.createElement('div');
            div.textContent = text;
            return div.innerHTML;
        }

        async function loadNotifications() {
            try {
                const response = await fetch('/Notification/GetNotifications');
                const data = await response.json();
                
                const badge = document.getElementById("notificationBadge");
                const items = document.getElementById("notificationItems");
                
                if (badge && items) {
                    if (data.unreadCount > 0) {
                        badge.textContent = data.unreadCount;
                        badge.style.display = "block";
                    } else {
                        badge.style.display = "none";
                    }

                    if (data.notifications && data.notifications.length > 0) {
                        items.innerHTML = data.notifications.map((n, index) => {
                            const typeConfig = {
                                'Success': { class: 'notification-success', icon: 'fa-check-circle', color: '#28a745' },
                                'Warning': { class: 'notification-warning', icon: 'fa-exclamation-triangle', color: '#ffc107' },
                                'Error': { class: 'notification-error', icon: 'fa-exclamation-circle', color: '#dc3545' },
                                'Info': { class: 'notification-info', icon: 'fa-info-circle', color: '#17a2b8' }
                            };
                            const config = typeConfig[n.type] || typeConfig['Info'];
                            const linkAttr = n.link ? `onclick="if(event.target.tagName !== 'BUTTON' && event.target.tagName !== 'I') { window.location.href='${n.link}'; markAsRead(${n.id}); }"` : '';
                            const timeAgo = getTimeAgo(new Date(n.createdAt));
                            return `
                            <li class="notification-item ${!n.isRead ? 'notification-unread' : ''}" style="animation-delay: ${index * 0.05}s;" data-notification-id="${n.id}" ${linkAttr}>
                                <div class="notification-content">
                                    <div class="notification-icon-wrapper">
                                        <i class="fas ${config.icon} ${config.class}"></i>
                                    </div>
                                    <div class="notification-body">
                                        <div class="notification-title-row">
                                            <strong class="notification-title">${escapeHtml(n.title)}</strong>
                                            ${!n.isRead ? '<span class="notification-badge-new">M·ªõi</span>' : ''}
                                        </div>
                                        <p class="notification-message">${escapeHtml(n.message || '')}</p>
                                        <div class="notification-footer">
                                            <small class="notification-time">${timeAgo}</small>
                                            <button class="btn-notification-delete" onclick="event.stopPropagation(); event.preventDefault(); deleteNotification(${n.id});" title="X√≥a" type="button">
                                                <i class="fas fa-times"></i>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </li>
                        `;
                        }).join('');
                    } else {
                        items.innerHTML = '<div class="notification-empty"><i class="fas fa-bell-slash"></i><p>Kh√¥ng c√≥ th√¥ng b√°o</p></div>';
                    }
                }
            } catch (error) {
                console.error('Error loading notifications:', error);
                const items = document.getElementById("notificationItems");
                if (items) {
                    items.innerHTML = '<div class="text-center text-danger p-3">L·ªói khi t·∫£i th√¥ng b√°o</div>';
                }
            }
        }

        async function markAsRead(id) {
            try {
                await fetch(`/Notification/MarkAsRead?id=${id}`, { method: 'POST' });
                loadNotifications();
            } catch (error) {
                console.error('Error marking as read:', error);
            }
        }

        async function deleteNotification(id) {
            try {
                const response = await fetch(`/Notification/Delete?id=${id}`, { 
                    method: 'POST',
                    headers: {
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value || ''
                    }
                });
                
                if (response.ok) {
                    const result = await response.json();
                    if (result.success) {
                        // X√≥a notification kh·ªèi UI ngay l·∫≠p t·ª©c
                        const notificationItem = document.querySelector(`li.notification-item[data-notification-id="${id}"]`);
                        if (notificationItem) {
                            notificationItem.style.opacity = '0';
                            notificationItem.style.transform = 'translateX(100%)';
                            setTimeout(() => {
                                notificationItem.remove();
                                loadNotifications(); // Reload ƒë·ªÉ c·∫≠p nh·∫≠t badge
                            }, 300);
                        } else {
                            loadNotifications();
                        }
                    } else {
                        console.error('Failed to delete notification');
                        loadNotifications();
                    }
                } else {
                    console.error('Error response:', response.status);
                    loadNotifications();
                }
            } catch (error) {
                console.error('Error deleting notification:', error);
                // V·∫´n reload ƒë·ªÉ ƒë·∫£m b·∫£o UI ƒë∆∞·ª£c c·∫≠p nh·∫≠t
                loadNotifications();
            }
        }

        function getTimeAgo(date) {
            const now = new Date();
            const diff = now - date;
            const seconds = Math.floor(diff / 1000);
            const minutes = Math.floor(seconds / 60);
            const hours = Math.floor(minutes / 60);
            const days = Math.floor(hours / 24);

            if (seconds < 60) return 'V·ª´a xong';
            if (minutes < 60) return `${minutes} ph√∫t tr∆∞·ªõc`;
            if (hours < 24) return `${hours} gi·ªù tr∆∞·ªõc`;
            if (days < 7) return `${days} ng√†y tr∆∞·ªõc`;
            return date.toLocaleDateString('vi-VN', { day: '2-digit', month: '2-digit', year: 'numeric' });
        }
    </script>


