    <!-- Rule-based Chatbot -->
    <div id="geminiChat" style="position: fixed; bottom: 20px; right: 20px; width: 360px; max-width: calc(100% - 40px); z-index: 9999; font-family: var(--font-primary);">

        <!-- Header -->
        <div id="chatHeader" style="background: var(--primary-gradient); color: white; padding: 16px; cursor: pointer; border-radius: var(--radius-xl) var(--radius-xl) 0 0; font-weight: 600; text-align: center; box-shadow: var(--shadow-lg);">
            <i class="fas fa-comments me-2"></i>Chat với Mái Ấm
        </div>

        <!-- Body -->
        <div id="chatBody" style="display: none; background: var(--white); border: none; border-radius: 0 0 var(--radius-xl) var(--radius-xl); max-height: 400px; overflow-y: auto; box-shadow: var(--shadow-xl); max-width: 100%;">

            <div id="chatMessages" style="padding: 16px; height: 320px; overflow-y: auto; background: var(--gray-50);"></div>

            <div style="padding: 12px; background: var(--white); border-top: 2px solid var(--gray-200);">
                <div class="input-group">
                    <input id="chatInput" type="text" class="form-control" placeholder="Nhập câu hỏi..." style="border-radius: var(--radius-full) 0 0 var(--radius-full);" />
                    <button class="btn btn-primary" onclick="sendMessage()" style="border-radius: 0 var(--radius-full) var(--radius-full) 0;">
                        <i class="fas fa-paper-plane"></i>
                    </button>
                </div>
            </div>
        </div>
    </div>


    <script>
        async function sendMessage() {
            const input = document.getElementById("chatInput");
            const messages = document.getElementById("chatMessages");
            if (!input || !messages) return;

            const text = input.value.trim();
            if (!text) return;

            // hiển thị tin nhắn user
            messages.innerHTML += `<div class="text-end"><small><b>Bạn:</b> ${escapeHtml(text)}</small></div>`;

            // gọi API rulebot
            const resp = await fetch("/api/rulebot/ask", {
                method: "POST",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify({ message: text })
            });

            let json = await resp.json();
            const reply = json?.reply ?? "Xin lỗi, có lỗi xảy ra.";

            messages.innerHTML += `<div class="text-start text-success"><small><b>Bot:</b> ${escapeHtml(reply)}</small></div>`;
            input.value = "";
            messages.scrollTop = messages.scrollHeight;
        }

        function escapeHtml(s) {
            return s.replace(/[&<>"']/g, function (m) {
                return ({ '&': '&amp;', '<': '&lt;', '>': '&gt;', '"': '&quot;', "'": '&#039;' })[m];
            });
        }

        document.addEventListener("DOMContentLoaded", function () {
            const header = document.getElementById("chatHeader");
            if (header) header.addEventListener("click", () => {
                const body = document.getElementById("chatBody");
                if (!body) return;
                body.style.display = (body.style.display === "block") ? "none" : "block";
            });

            const input = document.getElementById("chatInput");
            if (input) {
                input.addEventListener("keypress", function (e) {
                    if (e.key === "Enter") sendMessage();
                });
            }

            // Load notifications
            @if (User.Identity.IsAuthenticated)
            {
                <text>
                loadNotifications();
                // Refresh notifications mỗi 30 giây
                setInterval(loadNotifications, 30000);
                
                // Auto-refresh khi dropdown được mở
                const notificationDropdown = document.getElementById("notificationDropdown");
                if (notificationDropdown) {
                    // Xóa tất cả dấu chấm đen xung quanh notification bell - CHỈ ẩn ::after và ::before của link
                    const style = document.createElement('style');
                    style.textContent = `
                        #notificationDropdown::after,
                        #notificationDropdown::before,
                        .nav-item.dropdown:has(#notificationDropdown)::after,
                        .nav-item.dropdown:has(#notificationDropdown)::before {
                            display: none !important;
                            content: "" !important;
                            border: none !important;
                            width: 0 !important;
                            height: 0 !important;
                            margin: 0 !important;
                            padding: 0 !important;
                            opacity: 0 !important;
                            visibility: hidden !important;
                        }
                    `;
                    document.head.appendChild(style);
                    
                    const dropdownElement = new bootstrap.Dropdown(notificationDropdown);
                    notificationDropdown.addEventListener('shown.bs.dropdown', function () {
                        loadNotifications();
                    });
                }

                // Mark all as read
                const markAllReadBtn = document.getElementById("markAllReadBtn");
                if (markAllReadBtn) {
                    markAllReadBtn.addEventListener("click", async function(e) {
                        e.stopPropagation();
                        await fetch('/Notification/MarkAllAsRead', { method: 'POST' });
                        loadNotifications();
                    });
                }
                </text>
            }
        });

        function escapeHtml(text) {
            if (!text) return '';
            const div = document.createElement('div');
            div.textContent = text;
            return div.innerHTML;
        }

        async function loadNotifications() {
            try {
                const response = await fetch('/Notification/GetNotifications');
                const data = await response.json();
                
                const badge = document.getElementById("notificationBadge");
                const items = document.getElementById("notificationItems");
                
                if (badge && items) {
                    if (data.unreadCount > 0) {
                        badge.textContent = data.unreadCount;
                        badge.style.display = "block";
                    } else {
                        badge.style.display = "none";
                    }

                    if (data.notifications && data.notifications.length > 0) {
                        items.innerHTML = data.notifications.map((n, index) => {
                            const typeConfig = {
                                'Success': { class: 'notification-success', icon: 'fa-check-circle', color: '#28a745' },
                                'Warning': { class: 'notification-warning', icon: 'fa-exclamation-triangle', color: '#ffc107' },
                                'Error': { class: 'notification-error', icon: 'fa-exclamation-circle', color: '#dc3545' },
                                'Info': { class: 'notification-info', icon: 'fa-info-circle', color: '#17a2b8' }
                            };
                            const config = typeConfig[n.type] || typeConfig['Info'];
                            const linkAttr = n.link ? `onclick="if(event.target.tagName !== 'BUTTON' && event.target.tagName !== 'I') { window.location.href='${n.link}'; markAsRead(${n.id}); }"` : '';
                            const timeAgo = getTimeAgo(new Date(n.createdAt));
                            return `
                            <li class="notification-item ${!n.isRead ? 'notification-unread' : ''}" style="animation-delay: ${index * 0.05}s;" data-notification-id="${n.id}" ${linkAttr}>
                                <div class="notification-content">
                                    <div class="notification-icon-wrapper">
                                        <i class="fas ${config.icon} ${config.class}"></i>
                                    </div>
                                    <div class="notification-body">
                                        <div class="notification-title-row">
                                            <strong class="notification-title">${escapeHtml(n.title)}</strong>
                                            ${!n.isRead ? '<span class="notification-badge-new">Mới</span>' : ''}
                                        </div>
                                        <p class="notification-message">${escapeHtml(n.message || '')}</p>
                                        <div class="notification-footer">
                                            <small class="notification-time">${timeAgo}</small>
                                            <button class="btn-notification-delete" onclick="event.stopPropagation(); event.preventDefault(); deleteNotification(${n.id});" title="Xóa" type="button">
                                                <i class="fas fa-times"></i>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </li>
                        `;
                        }).join('');
                    } else {
                        items.innerHTML = '<div class="notification-empty"><i class="fas fa-bell-slash"></i><p>Không có thông báo</p></div>';
                    }
                }
            } catch (error) {
                console.error('Error loading notifications:', error);
                const items = document.getElementById("notificationItems");
                if (items) {
                    items.innerHTML = '<div class="text-center text-danger p-3">Lỗi khi tải thông báo</div>';
                }
            }
        }

        async function markAsRead(id) {
            try {
                await fetch(`/Notification/MarkAsRead?id=${id}`, { method: 'POST' });
                loadNotifications();
            } catch (error) {
                console.error('Error marking as read:', error);
            }
        }

        async function deleteNotification(id) {
            try {
                const response = await fetch(`/Notification/Delete?id=${id}`, { 
                    method: 'POST',
                    headers: {
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value || ''
                    }
                });
                
                if (response.ok) {
                    const result = await response.json();
                    if (result.success) {
                        // Xóa notification khỏi UI ngay lập tức
                        const notificationItem = document.querySelector(`li.notification-item[data-notification-id="${id}"]`);
                        if (notificationItem) {
                            notificationItem.style.opacity = '0';
                            notificationItem.style.transform = 'translateX(100%)';
                            setTimeout(() => {
                                notificationItem.remove();
                                loadNotifications(); // Reload để cập nhật badge
                            }, 300);
                        } else {
                            loadNotifications();
                        }
                    } else {
                        console.error('Failed to delete notification');
                        loadNotifications();
                    }
                } else {
                    console.error('Error response:', response.status);
                    loadNotifications();
                }
            } catch (error) {
                console.error('Error deleting notification:', error);
                // Vẫn reload để đảm bảo UI được cập nhật
                loadNotifications();
            }
        }

        function getTimeAgo(date) {
            const now = new Date();
            const diff = now - date;
            const seconds = Math.floor(diff / 1000);
            const minutes = Math.floor(seconds / 60);
            const hours = Math.floor(minutes / 60);
            const days = Math.floor(hours / 24);

            if (seconds < 60) return 'Vừa xong';
            if (minutes < 60) return `${minutes} phút trước`;
            if (hours < 24) return `${hours} giờ trước`;
            if (days < 7) return `${days} ngày trước`;
            return date.toLocaleDateString('vi-VN', { day: '2-digit', month: '2-digit', year: 'numeric' });
        }
    </script>


